@code {
    private DateTime dataAtual = DateTime.Now;
    private DateTime? diaSelecionado;
    private ElementReference detalhesDiaRef;

    private List<EnsaioModel> ensaios = new();
    private List<ClienteModel> clientes = new();

    private int ensaiosMes;
    private int clientesNovosMes;
    private decimal faturamentoMes;
    private int ensaiosConcluidosMes;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDashboard();
    }

    private async Task CarregarDashboard()
    {
        var dados = await DashboardService.GetDashboardDataAsync();

        ensaios = dados.Ensaios;
        clientes = dados.Clientes;
        ensaiosMes = dados.EnsaiosMes;
        clientesNovosMes = dados.ClientesNovosMes;
        faturamentoMes = dados.FaturamentoMes;
        ensaiosConcluidosMes = dados.EnsaiosConcluidosMes;
    }

    private List<DateTime?> ObterDiasCalendario()
    {
        var primeiroDiaMes = new DateTime(dataAtual.Year, dataAtual.Month, 1);
        var diasNoMes = DateTime.DaysInMonth(dataAtual.Year, dataAtual.Month);

        // DayOfWeek retorna 0 para Domingo, 1 para Segunda, etc.
        int offsetDias = (int)primeiroDiaMes.DayOfWeek;

        var calendario = new List<DateTime?>();

        // Adiciona espaços vazios para alinhar o início do mês
        for (int i = 0; i < offsetDias; i++)
        {
            calendario.Add(null);
        }

        // Adiciona os dias reais do mês
        for (int dia = 1; dia <= diasNoMes; dia++)
        {
            calendario.Add(new DateTime(dataAtual.Year, dataAtual.Month, dia));
        }

        return calendario;
    }

    private List<EnsaioModel> ObterEnsaiosDoDia(DateTime? dataConsulta)
    {
        if (!dataConsulta.HasValue) return new List<EnsaioModel>();

        return ensaios.Where(e => e.Data.Date == dataConsulta.Value.Date).ToList();
    }

    private void MesAnterior() { dataAtual = dataAtual.AddMonths(-1); diaSelecionado = null; }
    private void ProximoMes() { dataAtual = dataAtual.AddMonths(1); diaSelecionado = null; }

    private async Task SelecionarDia(DateTime dia)
    {
        if (dia.Month != dataAtual.Month) return;
        diaSelecionado = dia;
        await Task.Delay(50);
        await JS.InvokeVoidAsync("scrollToElement", detalhesDiaRef);
    }

    private void FecharDetalhes() => diaSelecionado = null;
    private void CriarNovoEnsaio() => Navigation.NavigateTo("/ensaios/criarEnsaio");
    private void EditarEnsaio(int id) => Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");

