@code {
    private DateTime dataAtual = DateTime.Now;
    private DateTime? diaSelecionado;
    private ElementReference detalhesDiaRef;

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;

    // Dados simulados - substitua pelos seus dados reais
    private List<EnsaioModel> ensaios = new();
    private List<ClienteModel> clientes = new();

    private int ensaiosMes;
    private int clientesNovosMes;
    private decimal faturamentoMes;

    protected override void OnInitialized()
    {
        // Dados simulados - substitua pela sua lógica de acesso a dados
        GerarDadosSimulados();
        CalcularEstatisticas();
    }

    private void GerarDadosSimulados()
    {
        var random = new Random();

        // Clientes simulados
        for (int i = 1; i <= 15; i++)
        {
            clientes.Add(new ClienteModel
            {
                Id = i,
                Nome = $"Cliente {i}",
                Telefone = $"(51) 9{random.Next(1000, 9999)}-{random.Next(1000, 9999)}",
                Email = $"cliente{i}@email.com",
                Endereco = $"Rua {i}, Alvorada - RS"
            });
        }

        // Ensaios simulados
        var hoje = DateTime.Now;
        var tiposEnsaio = Enum.GetValues<TipoEnsaio>();

        for (int i = 0; i < 25; i++)
        {
            var diasOffset = random.Next(-15, 30);
            var data = hoje.AddDays(diasOffset).Date.AddHours(random.Next(8, 18));

            ensaios.Add(new EnsaioModel
            {
                Id = i + 1,
                Titulo = $"Ensaio {i + 1}",
                Tipo = tiposEnsaio[random.Next(tiposEnsaio.Length)],
                Data = data,
                Local = $"Local {random.Next(1, 6)}",
                Valor = random.Next(300, 2000),
                ClienteId = random.Next(1, clientes.Count + 1)
            });
        }
    }

    private void CalcularEstatisticas()
    {
        var inicioMes = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
        var fimMes = inicioMes.AddMonths(1).AddDays(-1);

        ensaiosMes = ensaios.Count(e => e.Data >= inicioMes && e.Data <= fimMes);
        clientesNovosMes = random.Next(3, 12); // Simula novos clientes
        faturamentoMes = ensaios
            .Where(e => e.Data >= inicioMes && e.Data <= fimMes && e.Valor.HasValue)
            .Sum(e => e.Valor ?? 0);
    }

    private Random random = new Random();

    private List<DateTime> ObterDiasCalendario()
    {
        var primeiroDiaMes = new DateTime(dataAtual.Year, dataAtual.Month, 1);
        var ultimoDiaMes = primeiroDiaMes.AddMonths(1).AddDays(-1);

        var primeiroDiaSemana = (int)primeiroDiaMes.DayOfWeek;
        var inicioDias = primeiroDiaMes.AddDays(-primeiroDiaSemana);

        var dias = new List<DateTime>();
        for (int i = 0; i < 42; i++)
        {
            dias.Add(inicioDias.AddDays(i));
        }

        return dias;
    }

    private List<EnsaioModel> ObterEnsaiosDoDia(DateTime dia)
    {
        return ensaios.Where(e => e.Data.Date == dia.Date).ToList();
    }

    private void MesAnterior()
    {
        dataAtual = dataAtual.AddMonths(-1);
        diaSelecionado = null;
    }

    private void ProximoMes()
    {
        dataAtual = dataAtual.AddMonths(1);
        diaSelecionado = null;
    }

    private void SelecionarDia(DateTime dia)
    {
        diaSelecionado = dia;
        StateHasChanged();

        // Aguarda o elemento ser renderizado e então scrolla
        Task.Run(async () =>
        {
            await Task.Delay(100);
            await InvokeAsync(async () =>
            {
                await JSRuntime.InvokeVoidAsync("scrollToElement", detalhesDiaRef);
            });
        });
    }

    private string ObterCorTipo(TipoEnsaio tipo)
    {
        return tipo switch
        {
            TipoEnsaio.Casamento => "#f093fb",
            TipoEnsaio.Gestante => "#fa709a",
            TipoEnsaio.Infantil => "#4facfe",
            TipoEnsaio.Evento => "#43e97b",
            TipoEnsaio.Retrato => "#667eea",
            _ => "#a0aec0"
        };
    }
}