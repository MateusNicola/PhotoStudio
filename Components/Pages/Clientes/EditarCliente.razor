</style>

@code {
    [Parameter] public int Id { get; set; }

    private ClienteModel? cliente;
    private bool carregando = true;
    private bool salvando = false;

    protected override async Task OnInitializedAsync()
    {
        await CarregarCliente();
    }

    private async Task CarregarCliente()
    {
        carregando = true;
        StateHasChanged();

        try
        {
            cliente = await DbContext.Clientes
                .FirstOrDefaultAsync(c => c.Id == Id);

            if (cliente == null)
            {
                ToastService.Error("Cliente não encontrado.");
            }
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar cliente: {ex.Message}");
            cliente = null;
        }
        finally
        {
            carregando = false;
            StateHasChanged();
        }
    }

    private void AplicarMascaraTelefone(ChangeEventArgs e)
    {
        if (cliente == null)
            return;

        var numeros = new string(e.Value?.ToString()
            .Where(char.IsDigit)
            .ToArray());

        if (numeros.Length > 11)
            numeros = numeros.Substring(0, 11);

        if (numeros.Length <= 2)
        {
            cliente.Telefone = $"({numeros}";
        }
        else
        {
            cliente.Telefone = $"({numeros.Substring(0, 2)}) {numeros.Substring(2)}";
        }
    }

    private async Task Salvar()
    {
        if (cliente == null) return;

        salvando = true;
        StateHasChanged();

        try
        {
            await DbContext.SaveChangesAsync();

            ToastService.Success("Cliente atualizado com sucesso!");
            await Task.Delay(500); // Pequeno delay para feedback visual
            Navigation.NavigateTo("/clientes");
        }
        catch (DbUpdateException ex)
        {
            ToastService.Error($"Erro ao salvar no banco de dados: {ex.InnerException?.Message ?? ex.Message}");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao salvar alterações: {ex.Message}");
        }
        finally
        {
            salvando = false;
            StateHasChanged();
        }
    }

    private void Voltar()
    {
        Navigation.NavigateTo("/clientes");
    }
}