@code {
    [Parameter] public int EnsaioId { get; set; }

    private EnsaioModel? ensaio;
    private List<ClienteModel> clientes = new();
    private bool carregando = true;
    private bool salvando = false;
    private bool excluindo = false;
    private DateTime dataEnsaio = DateTime.Today;
    private string horaEnsaio = "10:00";
    private JanelaConfirmacao? janelaConfirmacao;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Carrega dados em paralelo para maior rapidez
            var tarefas = new Task[] {
                CarregarClientes(),
                CarregarEnsaio()
            };
            await Task.WhenAll(tarefas);
        }
        finally
        {
            carregando = false;
        }
    }

    private async Task CarregarClientes()
    {
        clientes = await ClienteService.ListarTodosAsync();
    }

    private async Task CarregarEnsaio()
    {
        ensaio = await EnsaioService.ObterPorIdAsync(EnsaioId);

        if (ensaio != null)
        {
            dataEnsaio = ensaio.Data.Date;
            horaEnsaio = ensaio.Data.ToString("HH:mm");
        }
    }

    private async Task SalvarEnsaio()
    {
        if (ensaio == null || ensaio.ClienteId == 0) return;

        salvando = true;
        try
        {
            // Sincroniza Data e Hora
            if (TimeSpan.TryParse(horaEnsaio, out var hora))
            {
                ensaio.Data = dataEnsaio.Date.Add(hora);
            }

            await EnsaioService.AtualizarAsync(ensaio);
            ToastService.Success("Ensaio atualizado com sucesso!");

            await Task.Delay(500);
            Navigation.NavigateTo("/ensaios");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao atualizar: {ex.Message}");
        }
        finally
        {
            salvando = false;
        }
    }

    private async Task ExcluirEnsaio()
    {
        if (janelaConfirmacao == null || ensaio == null) return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado) return;

        excluindo = true;
        try
        {
            await EnsaioService.ExcluirAsync(ensaio.Id);
            ToastService.Success("Ensaio excluído com sucesso!");

            await Task.Delay(500);
            Navigation.NavigateTo("/ensaios");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao excluir ensaio: {ex.Message}");
        }
        finally
        {
            excluindo = false;
        }
    }

    private void Voltar() => Navigation.NavigateTo("/ensaios");
}