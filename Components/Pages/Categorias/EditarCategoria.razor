@code {
    [Parameter] public int Id { get; set; }

    private CategoriaModel? categoria;
    private bool carregando = true;
    private bool salvando = false;
    private string codigoOriginal = "";

    protected override async Task OnInitializedAsync()
    {
        await CarregarCategoria();
    }

    private async Task CarregarCategoria()
    {
        carregando = true;
        try
        {
            categoria = await CategoriaService.ObterPorIdAsync(Id);

            if (categoria != null)
            {
                codigoOriginal = categoria.Codigo;

                // Correção preventiva para o erro "Data is Null"
                // Se a cor vier nula do banco, definimos uma cor padrão
                if (string.IsNullOrEmpty(categoria.Cor))
                {
                    categoria.Cor = "#6366f1";
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar: {ex.Message}");
        }
        finally
        {
            carregando = false;
        }
    }

    private async Task Salvar()
    {
        if (categoria == null) return;

        salvando = true;
        try
        {
            categoria.Codigo = categoria.Codigo?.ToUpper().Trim() ?? "";
            categoria.Descricao = categoria.Descricao?.Trim() ?? "";

            // Verifica duplicidade se o código mudou
            if (categoria.Codigo != codigoOriginal)
            {
                var todas = await CategoriaService.ListarTodasAsync();
                if (todas.Any(c => c.Codigo == categoria.Codigo && c.Id != Id))
                {
                    ToastService.Error("Já existe uma categoria com este código!");
                    return;
                }
            }

            await CategoriaService.AtualizarAsync(categoria);
            ToastService.Success("Categoria atualizada!");
            await Task.Delay(500);
            Navigation.NavigateTo("/categorias");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao salvar: {ex.Message}");
        }
        finally
        {
            salvando = false;
        }
    }

    private void Voltar() => Navigation.NavigateTo("/categorias");
}