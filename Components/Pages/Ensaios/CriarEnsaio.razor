@page "/ensaios/criarEnsaio"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using PhotoStudio.app.Data
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@inject NavigationManager Navigation
@inject AppDbContext DbContext
@inject ToastService ToastService

<PageTitle>Criar Ensaio</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Criar Novo Ensaio</h1>
        <p class="subtitle">Preencha os dados do ensaio fotográfico</p>
    </div>

    <div class="form-container">
        <EditForm Model="@novoEnsaio" OnValidSubmit="@SalvarEnsaio">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <!-- Título -->
                <div class="form-group full-width">
                    <label for="titulo">Título do Ensaio *</label>
                    <InputText id="titulo" @bind-Value="novoEnsaio.Titulo"
                               class="form-control" placeholder="Ex: Ensaio de Casamento - João e Maria" />
                    <ValidationMessage For="@(() => novoEnsaio.Titulo)" />
                </div>

                <!-- Tipo de Ensaio -->
                <div class="form-group">
                    <label for="tipo">Tipo de Ensaio *</label>
                    <InputSelect id="tipo"
                                 class="form-control"
                                 @bind-Value="novoEnsaio.Tipo">
                        <option value="">Selecione o tipo de ensaio</option>

                        @foreach (TipoEnsaio tipo in Enum.GetValues(typeof(TipoEnsaio)))
                        {
                            <option value="@tipo">@tipo</option>
                        }
                    </InputSelect>

                    <ValidationMessage For="@(() => novoEnsaio.Tipo)" />
                </div>

                <!-- Cliente -->
                <div class="form-group">
                    <div class="label-with-button">
                        <label for="cliente">Cliente *</label>
                    </div>
                    <select id="cliente" @bind="novoEnsaio.ClienteId" class="form-control">
                        <option value="0">Selecione o cliente</option>
                        @foreach (var cliente in clientes)
                        {
                            <option value="@cliente.Id">@cliente.Nome</option>
                        }
                    </select>
                    @if (novoEnsaio.ClienteId == 0)
                    {
                        <small class="validation-message">O campo Cliente é obrigatório.</small>
                    }
                </div>

                <!-- Data -->
                <div class="form-group">
                    <label for="data">Data *</label>
                    <InputDate id="data" @bind-Value="dataEnsaio" class="form-control" />
                    <ValidationMessage For="@(() => dataEnsaio)" />
                </div>

                <!-- Hora -->
                <div class="form-group">
                    <label for="hora">Horário *</label>
                    <InputText id="hora" type="time" @bind-Value="horaEnsaio" class="form-control" />
                    @if (string.IsNullOrEmpty(horaEnsaio))
                    {
                        <small class="validation-message">O campo Horário é obrigatório.</small>
                    }
                </div>

                <!-- Local -->
                <div class="form-group full-width">
                    <label for="local">Local *</label>
                    <InputText id="local" @bind-Value="novoEnsaio.Local"
                               class="form-control" placeholder="Ex: Praça da Matriz, Porto Alegre" />
                    <ValidationMessage For="@(() => novoEnsaio.Local)" />
                </div>

                <!-- Valor -->
                <div class="form-group">
                    <label for="valor">Valor (R$)</label>
                    <InputNumber TValue="decimal?"
                                 id="valor"
                                 @bind-Value="novoEnsaio.Valor"
                                 class="form-control"
                                 placeholder="0,00" />
                    <ValidationMessage For="@(() => novoEnsaio.Valor)" />
                </div>
            </div>

            <!-- Botões -->
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary" disabled="@salvando">
                    @if (salvando)
                    {
                        <span class="spinner"></span>
                        <span>Salvando...</span>
                    }
                    else
                    {
                        <span>💾 Salvar Ensaio</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>

    <!-- Mensagem de Sucesso -->
    @if (mostrarSucesso)
    {
        <div class="alert alert-success">
            <span class="alert-icon">✓</span>
            <span>Ensaio criado com sucesso!</span>
        </div>
    }

    <!-- Mensagem de Erro -->
    @if (!string.IsNullOrEmpty(mensagemErro))
    {
        <div class="alert alert-error">
            <span class="alert-icon">✕</span>
            <span>@mensagemErro</span>
        </div>
    }
</div>

