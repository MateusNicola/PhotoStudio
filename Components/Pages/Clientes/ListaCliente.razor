    .endereco-icon {
        font-size: 0.9rem;
        flex-shrink: 0;
        opacity: 0.7;
    }

    .endereco-texto {
        color: #2d3748;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Ações */
    .actions-cell {
        text-align: center;
    }

    .icon-btn {
        border: none;
        background: none;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 4px;
    }

        .icon-btn.edit {
            color: #4a5568;
        }

            .icon-btn.edit:hover {
                background: #ebf8ff;
                color: #3182ce;
            }

        .icon-btn.delete {
            color: #4a5568;
        }

            .icon-btn.delete:hover {
                background: #fff5f5;
                color: #e53e3e;
            }

    .table-footer {
        padding: 16px;
        background: #f7fafc;
        border-top: 1px solid #e2e8f0;
        color: #718096;
        font-size: 0.9rem;
        text-align: right;
    }

    /* Loading State */
    .loading-container {
        padding: 60px 32px;
        text-align: center;
    }

    .loading-spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e2e8f0;
        border-top-color: #667eea;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 20px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .loading-container p {
        color: #718096;
        font-size: 1.1rem;
        margin: 0;
    }

    /* Empty State */
    .empty-message {
        padding: 60px 32px;
        text-align: center;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-message h3 {
        color: #2d3748;
        font-size: 1.5rem;
        margin: 0 0 8px 0;
    }

    .empty-message p {
        color: #718096;
        font-size: 1rem;
        margin: 0;
    }

    /* Responsivo */
    @@media (max-width: 1024px) {
        .styled-table {
            font-size: 0.9rem;
        }

        .nome-principal {
            font-size: 0.95rem;
        }

        .contato-texto {
            font-size: 0.85rem;
        }
    }

    @@media (max-width: 768px) {
        .actions-bar {
            flex-direction: column;
        }

        .search-box {
            max-width: 100%;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }

        .styled-table th:nth-child(3),
        .styled-table td:nth-child(3) {
            display: none;
        }

        .avatar-icon {
            width: 32px;
            height: 32px;
            font-size: 1.2rem;
        }

        .contato-cell {
            gap: 6px;
        }
    }
</style>

@code {
    private List<ClienteModel> clientes = new();
    private List<ClienteModel> clientesFiltrados = new();
    private bool carregando = true;
    private string _filtroBusca = "";
    private JanelaConfirmacao? janelaConfirmacao;

    private string filtroBusca
    {
        get => _filtroBusca;
        set { _filtroBusca = value; AplicarFiltro(); }
    }

    protected override async Task OnInitializedAsync() => await CarregarClientes();

    private async Task CarregarClientes()
    {
        carregando = true;
        try
        {
            // A página apenas solicita os dados
            clientes = await ClienteService.ObterTodosAsync();
            AplicarFiltro();
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar clientes: {ex.Message}");
        }
        finally
        {
            carregando = false;
        }
    }

    private async Task Excluir(int id)
    {
        if (janelaConfirmacao == null) return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado) return;

        try
        {
            await ClienteService.ExcluirAsync(id);
            await CarregarClientes();
            ToastService.Success("Cliente excluído com sucesso!");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao excluir: {ex.Message}");
        }
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            clientesFiltrados = clientes.ToList();
        }
        else
        {
            clientesFiltrados = clientes
                .Where(c =>
                    c.Nome.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                    c.Email.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void CriarCliente()
    {
        Navigation.NavigateTo("/clientes/criarCliente");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/clientes/editarCliente/{id}");
    }
}