@code {
    private CategoriaModel novaCategoria = new()
    {
        Codigo = "",
        Descricao = "",
        Cor = "#6366f1"
    };

    private bool salvando = false;
    private int usuarioLogadoId;

    protected override async Task OnInitializedAsync()
    {
        // Obtém o usuário logado via Claims
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is { IsAuthenticated: true })
        {
            var claimId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            int.TryParse(claimId, out usuarioLogadoId);
        }
        else
        {
            // Se não estiver logado, redireciona
            Navigation.NavigateTo("/login");
        }
    }

    private async Task Salvar()
    {
        if (usuarioLogadoId == 0)
        {
            ToastService.Error("Usuário não identificado. Faça login novamente.");
            return;
        }

        salvando = true;
        try
        {
            // Tratamento de dados
            novaCategoria.Codigo = novaCategoria.Codigo?.ToUpper().Trim() ?? "";
            novaCategoria.Descricao = novaCategoria.Descricao?.Trim() ?? "";
            novaCategoria.CriadoEm = DateTime.Now;

            // O MAIS IMPORTANTE: Vincula a categoria ao usuário logado
            novaCategoria.UsuarioId = usuarioLogadoId;

            // Verifica se o CÓDIGO já existe APENAS para este usuário
            var categoriasUsuario = await CategoriaService.ListarPorUsuarioAsync(usuarioLogadoId);
            if (categoriasUsuario.Any(c => c.Codigo == novaCategoria.Codigo))
            {
                ToastService.Error("Você já possui uma categoria com este código!");
                return;
            }

            await CategoriaService.CriarAsync(novaCategoria);

            ToastService.Success("Categoria criada com sucesso!");
            await Task.Delay(1000); // Delay curto para o usuário ver o feedback
            Navigation.NavigateTo("/categorias");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao criar categoria: {ex.Message}");
        }
        finally
        {
            salvando = false;
        }
    }

    private void Voltar() => Navigation.NavigateTo("/categorias");
}