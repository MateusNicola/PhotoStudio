        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

        .btn-modern:hover {
            transform: translateY(-2px);
        }

    .btn-gradient {
        background: var(--primary-gradient);
        color: white;
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-outline {
        background: white;
        border: 1px solid #e2e8f0;
        color: var(--text-primary);
    }

