    }

    .table-footer {
        flex-direction: column;
        gap: 1rem;
    }

    .search-wrapper {
        max-width: 100%;
    }

    .content-card {
        border-radius: 12px;
    }

    }
</style>

@code {
    private List<ClienteModel> clientes = new();
    private List<ClienteModel> clientesFiltrados = new();
    private bool carregando = true;
    private string _filtroBusca = "";
    private JanelaConfirmacao? janelaConfirmacao;

    // PAGINAÇÃO
    private int paginaAtual = 1;
    private int itensPorPagina = 8; // Aumentei um pouco para telas modernas
    private int totalPaginas => (int)Math.Ceiling((double)clientesFiltrados.Count / itensPorPagina);
    private IEnumerable<ClienteModel> clientesPaginados => clientesFiltrados.Skip((paginaAtual - 1) * itensPorPagina).Take(itensPorPagina);

    private string filtroBusca
    {
        get => _filtroBusca;
        set { _filtroBusca = value; AplicarFiltro(); }
    }

    protected override async Task OnInitializedAsync() => await CarregarClientes();

    private async Task CarregarClientes()
    {
        carregando = true;
        try
        {
            clientes = await ClienteService.ListarTodosAsync();
            AplicarFiltro();
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar clientes: {ex.Message}");
        }
        finally { carregando = false; }
    }

    private void MudarPagina(int novaPagina)
    {
        if (novaPagina >= 1 && novaPagina <= totalPaginas)
        {
            paginaAtual = novaPagina;
        }
    }

    private void AplicarFiltro()
    {
        paginaAtual = 1;
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            clientesFiltrados = clientes.ToList();
        }
        else
        {
            clientesFiltrados = clientes
                .Where(c =>
                    (c.Nome?.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Email?.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Telefone?.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ?? false))
                .ToList();
        }
    }

    private void CriarCliente() => Navigation.NavigateTo("/clientes/criarCliente");
    private void Editar(int id) => Navigation.NavigateTo($"/clientes/editarCliente/{id}");

    // Helper para avatar
    private string ObterIniciais(string? nome)
    {
        if (string.IsNullOrEmpty(nome)) return "?";
        var partes = nome.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (partes.Length == 1) return partes[0].Substring(0, 1).ToUpper();
        return (partes[0].Substring(0, 1) + partes.Last().Substring(0, 1)).ToUpper();
    }
}