@page "/alterar-senha"
@rendermode InteractiveServer
@attribute [Authorize]
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Services
@inject AuthService AuthService
@inject ToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<PageTitle>Alterar Senha - Photo Studio</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick='() => Navigation.NavigateTo("/")' title="Voltar">
                <span>←</span>
            </button>
            <div class="header-text">
                <h1>Segurança</h1>
                <p class="subtitle">Mantenha sua conta protegida atualizando sua senha periodicamente</p>
            </div>
            
            <div class="actions-right">
                <button type="button" class="btn btn-primary" @onclick="HandleSubmit" disabled="@isProcessing">
                    @if (isProcessing) { <span class="spinner"></span> }
                    <span>Atualizar Senha</span>
                </button>
            </div>
        </div>
    </div>

    <div class="form-container">
        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="form-group full-width">
                    <label>Senha Atual</label>
                    <InputText type="password" class="form-control" @bind-Value="model.SenhaAtual" placeholder="Digite sua senha atual" />
                    <ValidationMessage For="@(() => model.SenhaAtual)" class="validation-message" />
                </div>

                <div class="form-group">
                    <label>Nova Senha</label>
                    <InputText type="password" class="form-control" @bind-Value="model.NovaSenha" placeholder="Mínimo 6 caracteres" />
                    <ValidationMessage For="@(() => model.NovaSenha)" class="validation-message" />
                </div>

                <div class="actions-right" style="margin-top: 20px; justify-content: flex-end;">
                    <button type="submit" class="btn btn-primary" disabled="@isProcessing">
                        @if (isProcessing)
                        {
                            <span class="spinner"></span>
                            <span>Processando...</span>
                        }
                        else
                        {
                            <span>💾 Atualizar Senha</span>
                        }
                    </button>
                </div>
            </div>
        </EditForm>
    </div>
</div>

