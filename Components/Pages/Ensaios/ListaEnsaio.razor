@page "/ensaios"
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Ensaios
@rendermode InteractiveServer
@inject EnsaioService EnsaioService
@inject CategoriaService CategoriaService
@inject NavigationManager Navigation
@inject ToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Ensaios - Estúdio de Fotografia</PageTitle>

<div class="page-container">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Ensaio" Message="Tem certeza que deseja excluir este ensaio?" />

    <header class="page-header">
        <h1>Ensaios</h1>
        <p class="subtitle">Gerencie seus ensaios fotográficos</p>
    </header>

    <section class="actions-bar">
        <div class="filters-group">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text" class="form-control" placeholder="Título ou cliente..."
                       @bind-value="filtroBusca" @bind-value:event="oninput" @onkeyup="AplicarFiltro" />
            </div>

            <div class="filter-item">
                <input type="date" class="form-control" @bind="filtroData" @bind:after="AplicarFiltro" />
            </div>

            <div class="filter-item">
                <select class="form-control" @bind="filtroCategoriaId" @bind:after="AplicarFiltro">
                    <option value="0">Todas as Categorias</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat.Id">@cat.Descricao</option>
                    }
                </select>
            </div>

            @if (TemFiltroAtivo)
            {
                <button class="btn-clear" @onclick="LimparFiltros" title="Limpar Filtros">🧹</button>
            }
        </div>

        <button class="btn btn-primary" @onclick="IrParaCriarEnsaio">
            <span>📸 Novo Ensaio</span>
        </button>
    </section>

    <div class="table-container">
        @if (carregando)
        {
            <div class="loading-container"><div class="loading-spinner"></div><p>Carregando...</p></div>
        }
        else
        {
            @if (ensaiosFiltrados.Count == 0)
            {
                <div class="empty-state-container">
                    <div class="empty-state-content">
                        <div class="empty-state-icon-wrapper">
                            <span class="empty-state-icon">📸</span>
                            <div class="empty-state-pulse"></div>
                        </div>
                        <h3>Nenhum ensaio encontrado</h3>
                        <p>
                            @(TemFiltroAtivo
                                                ? "Não encontramos ensaios com os filtros aplicados. Tente ajustar sua busca ou limpar os filtros."
                                                : "Sua agenda está livre! Que tal começar agendando um novo ensaio fotográfico?")
                </p>

                @if (TemFiltroAtivo)
                        {
                            <button class="btn-outline" @onclick="LimparFiltros">
                                🧹 Limpar Filtros
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary btn-lg" @onclick="IrParaCriarEnsaio">
                                <span>📸 Agendar Primeiro Ensaio</span>
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="table-scroll">
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th style="width: 35%;">Informações do Ensaio</th>
                                <th style="width: 25%;">Data e Hora</th>
                                <th style="width: 25%;">Local</th>
                                <th style="width: 15%;">Financeiro</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in ensaiosPaginados)
                            {
                                <tr @onclick="() => Editar(e.Id)">
                                    <td>
                                        <div class="info-cell">
                                            <span class="titulo-principal">@e.Titulo</span>
                                            <div class="sub-info">
                                                @if (e.Categoria != null)
                                                {
                                                    <span class="tipo-badge" style="background: @e.Categoria.Cor">@e.Categoria.Descricao</span>
                                                }
                                                <span class="cliente-nome">👤 @e.Cliente.Nome</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>📅 @e.Data.ToString("dd/MM/yyyy") às @e.Data.ToString("HH:mm")</td>
                                    <td>📍 @e.Local</td>
                                    <td>
                                        <div class="financeiro-cell">
                                            <strong>@(e.Valor?.ToString("C") ?? "-")</strong>
                                            <span class="situacao-badge" style="background: @ObterCorSituacao(e.Situacao)">@e.Situacao</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <footer class="pagination-container">
                    <div class="pagination-info">Mostrando @ensaiosPaginados.Count() de @ensaiosFiltrados.Count ensaios</div>
                    <div class="pagination-controls">
                        <button class="btn-pager" disabled="@(paginaAtual == 1)" @onclick="() => MudarPagina(paginaAtual - 1)">
                            <span class="pager-icon">❮</span>
                            <span class="pager-text">Anterior</span>
                        </button>

                        <div class="pager-numbers">
                            @for (int i = 1; i <= totalPaginas; i++)
                            {
                                var p = i;
                                <button class="btn-number @(p == paginaAtual ? "active" : "")" @onclick="() => MudarPagina(p)">
                                    @p
                                </button>
                            }
                        </div>

                        <button class="btn-pager" disabled="@(paginaAtual >= totalPaginas)" @onclick="() => MudarPagina(paginaAtual + 1)">
                            <span class="pager-text">Próximo</span>
                            <span class="pager-icon">❯</span>
                        </button>
                    </div>
                </footer>
            }
        }
    </div>
</div>

