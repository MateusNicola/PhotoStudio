@page "/ensaios"
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Ensaios
@rendermode InteractiveServer
@inject EnsaioService EnsaioService
@inject CategoriaService CategoriaService
@inject NavigationManager Navigation
@inject ToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Ensaios | Photo Studio</PageTitle>

<div class="page-container fade-in">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Ensaio" Message="Tem certeza que deseja excluir este ensaio?" />

    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Ensaios Fotográficos</h1>
            <p class="page-subtitle">Gerencie sua agenda, locais e o status financeiro de cada trabalho.</p>
        </div>

        <button class="btn-modern btn-gradient" @onclick="IrParaCriarEnsaio">
            <span class="icon">📸</span>
            <span>Novo Ensaio</span>
        </button>
    </div>

    <div class="toolbar">
        <div class="filters-container">
            <div class="search-wrapper">
                <span class="search-icon">🔍</span>
                <input type="text"
                       class="search-input"
                       placeholder="Título ou cliente..."
                       @bind="filtroBusca"
                       @bind:event="oninput"
                       @onkeyup="AplicarFiltro" />
            </div>

            <div class="input-group-modern">
                <input type="date" class="filter-select" @bind="filtroData" @bind:after="AplicarFiltro" />
            </div>

            <div class="input-group-modern">
                <select class="filter-select" @bind="filtroCategoriaId" @bind:after="AplicarFiltro">
                    <option value="0">Todas as Categorias</option>
                    @foreach (var cat in categorias)
                    {
                        <option value="@cat.Id">@cat.Descricao</option>
                    }
                </select>
            </div>

            @if (TemFiltroAtivo)
            {
                <button class="btn-clear-filters" @onclick="LimparFiltros" title="Limpar Filtros">
                    Limpar Filtros ✕
                </button>
            }
        </div>

        <div class="stats-badge">
            <span class="badge-label">Resultados</span>
            <span class="badge-value">@ensaiosFiltrados.Count</span>
        </div>
    </div>

    <div class="content-card">
        @if (carregando)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Sincronizando sua agenda...</p>
            </div>
        }
        else if (ensaiosFiltrados.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon-bg">📅</div>
                <h3>Nenhum ensaio encontrado</h3>
                <p>
                    @(TemFiltroAtivo
                                    ? "Não encontramos resultados para os filtros aplicados."
                                    : "Sua agenda está vazia. Comece agendando um novo ensaio fotográfico!")
            </p>
            <button class="btn-modern @(TemFiltroAtivo ? "btn-outline" : "btn-gradient")"
                    @onclick="@(TemFiltroAtivo? LimparFiltros : IrParaCriarEnsaio)">
                @(TemFiltroAtivo ? "Limpar Filtros" : "Agendar Ensaio")
            </button>
        </div>
                }
        else
        {
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th width="35%">Informações do Ensaio</th>
                            <th width="20%">Data e Hora</th>
                            <th width="25%" class="hide-mobile">Localização</th>
                            <th width="20%" style="text-align: right;">Financeiro</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in ensaiosPaginados)
                        {
                            <tr @onclick="() => Editar(e.Id)" class="clickable-row">
                                <td>
                                    <div class="info-cell">
                                        <span class="main-title">@e.Titulo</span>
                                        <div class="sub-info-tags">
                                            @if (e.Categoria != null)
                                            {
                                                <span class="category-dot" style="background: @e.Categoria.Cor"></span>
                                                <span class="category-name">@e.Categoria.Descricao</span>
                                            }
                                            <span class="divider">•</span>
                                            <span class="client-link">👤 @e.Cliente?.Nome</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="date-cell">
                                        <span class="d-date">@e.Data.ToString("dd/MM/yyyy")</span>
                                        <span class="d-time">🕒 @e.Data.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td class="hide-mobile">
                                    <div class="location-cell">
                                        <span class="loc-text" title="@e.Local">📍 @(e.Local?.Length > 30 ? e.Local.Substring(0, 27) + "..." : e.Local)</span>
                                    </div>
                                </td>
                                <td style="text-align: right;">
                                    <div class="finance-cell">
                                        <span class="price-tag">@(e.Valor?.ToString("C") ?? "R$ 0,00")</span>
                                        <span class="status-pill" style="background: @(ObterCorSituacao(e.Situacao) + "15"); color: @ObterCorSituacao(e.Situacao)">
                                            @e.Situacao
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <span class="footer-info">Mostrando @ensaiosPaginados.Count() de @ensaiosFiltrados.Count ensaios</span>

                <div class="pagination-controls">
                    <button class="btn-page-nav" disabled="@(paginaAtual == 1)" @onclick="() => MudarPagina(paginaAtual - 1)">❮</button>

                    <div class="page-numbers">
                        @for (int i = 1; i <= totalPaginas; i++)
                        {
                            var p = i;
                            if (i == 1 || i == totalPaginas || (i >= paginaAtual - 1 && i <= paginaAtual + 1))
                            {
                                <button class="btn-page-number @(p == paginaAtual ? "active" : "")" @onclick="() => MudarPagina(p)">@p</button>
                            }
                        }
                    </div>

                    <button class="btn-page-nav" disabled="@(paginaAtual >= totalPaginas)" @onclick="() => MudarPagina(paginaAtual + 1)">❯</button>
                </div>
            </div>
        }
    </div>
</div>

<style>
