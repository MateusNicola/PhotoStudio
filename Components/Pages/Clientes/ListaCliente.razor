@page "/clientes"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Clientes
@inject ClienteService ClienteService
@inject NavigationManager Navigation
@inject ToastService ToastService
@attribute [Authorize]

<PageTitle>Clientes | Photo Studio</PageTitle>

<div class="page-container fade-in">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Cliente" Message="Tem certeza que deseja excluir este cliente?" />

    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Meus Clientes</h1>
            <p class="page-subtitle">Gerencie sua base de contatos e mantenha o histórico atualizado.</p>
        </div>

        <button class="btn-modern btn-gradient" @onclick="CriarCliente">
            <span class="icon">✚</span>
            <span>Novo Cliente</span>
        </button>
    </div>

    <div class="toolbar">
        <div class="search-wrapper">
            <span class="search-icon">🔍</span>
            <input type="text"
                   class="search-input"
                   placeholder="Buscar por nome, email ou telefone..."
                   @bind="filtroBusca"
                   @bind:event="oninput" />
            @if (!string.IsNullOrEmpty(filtroBusca))
            {
                <button class="btn-clear" @onclick="() => filtroBusca = string.Empty">✕</button>
            }
        </div>
        <div class="stats-badge">
            <span class="badge-label">Total</span>
            <span class="badge-value">@clientesFiltrados.Count</span>
        </div>
    </div>

    <div class="content-card">
        @if (carregando)
        {
            <div class="loading-state">
                <div class="spinner"></div>
                <p>Carregando sua lista de clientes...</p>
            </div>
        }
        else if (clientesFiltrados.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-icon-bg">👥</div>
                <h3>Nenhum cliente encontrado</h3>
                <p>
                    @(string.IsNullOrWhiteSpace(filtroBusca)
                                    ? "Sua base de dados ainda está vazia. Que tal cadastrar o primeiro?"
                                    : $"Não encontramos resultados para \"{filtroBusca}\".")
            </p>

            @if (string.IsNullOrWhiteSpace(filtroBusca))
                {
                    <button class="btn-modern btn-outline" @onclick="CriarCliente">Cadastrar Cliente</button>
                }
                else
                {
                    <button class="btn-modern btn-text" @onclick="() => filtroBusca = string.Empty">Limpar filtros</button>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th width="35%">Cliente</th>
                            <th width="25%">Contato</th>
                            <th width="30%" class="hide-mobile">Localização</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in clientesPaginados)
                        {
                            <tr @onclick="() => Editar(c.Id)" class="clickable-row">
                                <td>
                                    <div class="user-profile">
                                        <div class="avatar-circle">
                                            @ObterIniciais(c.Nome)
                                        </div>
                                        <div class="user-info">
                                            <span class="user-name">@c.Nome</span>
                                            <span class="user-id">ID: #@c.Id</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contact-info">
                                        <div class="contact-item">
                                            <span class="c-icon">📧</span>
                                            <span class="c-text" title="@c.Email">@c.Email</span>
                                        </div>
                                        <div class="contact-item">
                                            <span class="c-icon">📱</span>
                                            <span class="c-text">@c.Telefone</span>
                                        </div>
                                    </div>
                                </td>
                                <td class="hide-mobile">
                                    <div class="address-info">
                                        @if (!string.IsNullOrEmpty(c.Cidade))
                                        {
                                            <span class="location-text">@c.Cidade, @c.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="location-empty">-</span>
                                        }
                                        <small class="country-tag">@(string.IsNullOrEmpty(c.Pais) ? "Brasil" : c.Pais)</small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <span class="footer-info">Página @paginaAtual de @totalPaginas</span>

                <div class="pagination-controls">
                    <button class="btn-page-nav" disabled="@(paginaAtual == 1)" @onclick="() => MudarPagina(paginaAtual - 1)">
                        ❮
                    </button>

                    <div class="page-numbers">
                        @for (int i = 1; i <= totalPaginas; i++)
                        {
                            // Lógica simples para não mostrar 100 botões se tiver muitas páginas
                            if (i == 1 || i == totalPaginas || (i >= paginaAtual - 1 && i <= paginaAtual + 1))
                            {
                                var p = i;
                                <button class="btn-page-number @(p == paginaAtual ? "active" : "")" @onclick="() => MudarPagina(p)">
                                    @p
                                </button>
                            }
                            else if (i == paginaAtual - 2 || i == paginaAtual + 2)
                            {
                                <span class="page-dots">...</span>
                            }
                        }
                    </div>

                    <button class="btn-page-nav" disabled="@(paginaAtual >= totalPaginas)" @onclick="() => MudarPagina(paginaAtual + 1)">
                        ❯
                    </button>
                </div>
            </div>
        }
    </div>
</div>

<style>
