@page "/categorias/editar/{Id:int}"
@rendermode InteractiveServer
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext
@inject CategoriaService CategoriaService
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Editar Categoria - Estúdio de Fotografia</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div>
                <h1>Editar Categoria</h1>
                <p class="subtitle">Atualize as informações da categoria</p>
            </div>
        </div>
    </div>

    @if (carregando)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Carregando dados da categoria...</p>
        </div>
    }
    else if (categoria == null)
    {
        <div class="error-container">
            <div class="error-icon">⚠️</div>
            <h3>Categoria não encontrada</h3>
            <p>A categoria que você está tentando editar não existe.</p>
            <button class="btn btn-primary" @onclick="Voltar">
                Voltar para Categorias
            </button>
        </div>
    }
    else
    {
        <div class="form-container">
            <EditForm Model="@categoria" OnValidSubmit="Salvar">
                <DataAnnotationsValidator />

                <div class="form-grid">
                    <div class="form-group">
                        <label for="codigo">Código *</label>
                        <InputText id="codigo" class="form-control" @bind-Value="categoria.Codigo"
                                   placeholder="Ex: CASA" maxlength="5"
                                   style="text-transform: uppercase;" />
                        <ValidationMessage For="@(() => categoria.Codigo)" />
                    </div>

                    <div class="form-group">
                        <label for="cor">Cor de Identificação *</label>
                        <div class="color-picker-wrapper">
                            <InputText type="color" id="cor" class="form-control color-input" @bind-Value="categoria.Cor" />
                            <span class="color-hex">@categoria.Cor</span>
                        </div>
                        <ValidationMessage For="@(() => categoria.Cor)" />
                    </div>

                    <div class="form-group full-width">
                        <label for="descricao">Descrição *</label>
                        <InputText id="descricao" class="form-control" @bind-Value="categoria.Descricao"
                                   placeholder="Ex: Ensaio de Casamento" maxlength="250" />
                        <ValidationMessage For="@(() => categoria.Descricao)" />
                    </div>

                    <div class="form-group">
                        <label>Data de Criação</label>
                        <input type="text" class="form-control"
                               value="@(categoria.CriadoEm.ToString("dd/MM/yyyy HH:mm"))"
                               readonly disabled />
                        <small class="field-hint">Campo não editável</small>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Voltar" disabled="@salvando">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" disabled="@salvando">
                        @if (salvando)
                        {
                            <span class="spinner"></span>
                            <span>Salvando...</span>
                        }
                        else
                        {
                            <span>💾 Salvar Alterações</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

