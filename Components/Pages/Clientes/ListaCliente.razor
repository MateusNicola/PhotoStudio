        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .table-scroll {
        overflow-x: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
    }

        .styled-table th {
            text-align: left;
            background: #f7fafc;
            padding: 16px 12px;
            font-weight: 600;
            color: #4a5568;
            border-bottom: 2px solid #e2e8f0;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .styled-table td {
            padding: 14px 12px;
            border-bottom: 1px solid #edf2f7;
            color: #2d3748;
            vertical-align: middle;
        }

        .styled-table tr:hover {
            background: #f7faff;
            cursor: pointer;
        }

        .styled-table tr:last-child td {
            border-bottom: none;
        }

        .styled-table tbody tr {
            transition: all 0.2s;
        }

    /* Célula de Informações Pessoais */
    .info-pessoal {
        display: flex;
        flex-direction: column;
    }

    .nome-row {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .avatar-icon {
        font-size: 1.5rem;
        flex-shrink: 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }

    .nome-principal {
        font-weight: 600;
        font-size: 1rem;
        color: #2d3748;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        flex: 1;
