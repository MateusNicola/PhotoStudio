        // DayOfWeek retorna 0 para Domingo, 1 para Segunda, etc.
        int offsetDias = (int)primeiroDiaMes.DayOfWeek;

        var calendario = new List<DateTime?>();

        // Adiciona espaços vazios para alinhar o início do mês
        for (int i = 0; i < offsetDias; i++)
        {
            calendario.Add(null);
        }

        // Adiciona os dias reais do mês
        for (int dia = 1; dia <= diasNoMes; dia++)
        {
            calendario.Add(new DateTime(dataAtual.Year, dataAtual.Month, dia));
        }

        return calendario;
    }

    private List<EnsaioModel> ObterEnsaiosDoDia(DateTime? dataConsulta)
    {
        if (!dataConsulta.HasValue) return new List<EnsaioModel>();

        return ensaios.Where(e => e.Data.Date == dataConsulta.Value.Date).ToList();
    }

    private void MesAnterior() { dataAtual = dataAtual.AddMonths(-1); diaSelecionado = null; }
    private void ProximoMes() { dataAtual = dataAtual.AddMonths(1); diaSelecionado = null; }

    private async Task SelecionarDia(DateTime dia)
    {
        if (dia.Month != dataAtual.Month) return;
        diaSelecionado = dia;
        await Task.Delay(50);
        await JS.InvokeVoidAsync("scrollToElement", detalhesDiaRef);
    }

