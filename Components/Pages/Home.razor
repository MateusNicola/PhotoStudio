@code {
    private DateTime dataAtual = DateTime.Now;
    private DateTime? diaSelecionado;
    private ElementReference detalhesDiaRef;

    private List<EnsaioModel> ensaios = new();
    private List<ClienteModel> clientes = new();

    private int ensaiosMes;
    private int clientesNovosMes;
    private decimal faturamentoMes;
    private int ensaiosConcluidosMes;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDashboard();
    }

    private async Task CarregarDashboard()
    {
        var inicioMes = new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1);
        var fimMes = inicioMes.AddMonths(1).AddDays(-1);

        // Clientes
        clientes = await Db.Clientes.ToListAsync();

        clientesNovosMes = await Db.Clientes
            .CountAsync(c => c.CreatedAt >= inicioMes && c.CreatedAt <= fimMes);

        // Ensaios
        ensaios = await Db.Ensaios
            .Include(e => e.Cliente)
            .ToListAsync();

        ensaiosMes = ensaios
            .Count(e => e.Data >= inicioMes && e.Data <= fimMes);

        ensaiosConcluidosMes = ensaios
            .Count(e => e.Data >= inicioMes && e.Data <= fimMes && e.Situacao == Situacao.Concluido);

        faturamentoMes = ensaios
            .Where(e => e.Data >= inicioMes && e.Data <= fimMes && e.Valor.HasValue && e.Situacao == Situacao.Concluido)
            .Sum(e => e.Valor ?? 0);
    }

    private List<DateTime> ObterDiasCalendario()
    {
        var primeiroDiaMes = new DateTime(dataAtual.Year, dataAtual.Month, 1);
        var totalDias = DateTime.DaysInMonth(dataAtual.Year, dataAtual.Month);

        return Enumerable
            .Range(0, totalDias)
            .Select(i => primeiroDiaMes.AddDays(i))
            .ToList();
    }

    private List<EnsaioModel> ObterEnsaiosDoDia(DateTime dia)
    {
        return ensaios
            .Where(e => e.Data.Date == dia.Date)
            .ToList();
    }

    private void MesAnterior()
    {
        dataAtual = dataAtual.AddMonths(-1);
        diaSelecionado = null;
    }

    private void ProximoMes()
    {
        dataAtual = dataAtual.AddMonths(1);
        diaSelecionado = null;
    }

    private async Task SelecionarDia(DateTime dia)
    {
        // Não seleciona dias de outro mês
        if (dia.Month != dataAtual.Month)
            return;

        diaSelecionado = dia;

        await Task.Delay(50);

        if (detalhesDiaRef.Context != null)
        {
            await JS.InvokeVoidAsync("scrollToElement", detalhesDiaRef);
        }
    }

    private void FecharDetalhes()
    {
        diaSelecionado = null;
    }

    private void CriarNovoEnsaio()
    {
        Navigation.NavigateTo("/ensaios/criarEnsaio");
    }

    private void EditarEnsaio(int id)
    {
        Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");
    }

    private string ObterCorTipo(TipoEnsaio tipo)
    {
        return tipo switch
        {
            TipoEnsaio.Casamento => "#f093fb",
            TipoEnsaio.Gestante => "#fa709a",
            TipoEnsaio.Infantil => "#4facfe",
            TipoEnsaio.Evento => "#43e97b",
            TipoEnsaio.Retrato => "#667eea",
            _ => "#a0aec0"
        };
    }

    private string ObterCorSituacao(Situacao situacao)
    {
        return situacao switch
        {
            Situacao.Cancelado => "#e53e3e",
            Situacao.Concluido => "#38a169",
            Situacao.Agendado => "#3182ce",
            Situacao.Confirmado => "#d69e2e",
            _ => "#a0aec0"
        };
    }
}