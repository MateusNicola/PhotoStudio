            width: 100%;
            justify-content: center;
        }
    }
</style>

@code {
    private EnsaioModel novoEnsaio = new()
    {
        Titulo = "",
        Tipo = TipoEnsaio.Retrato,
        Local = "",
        Data = DateTime.Now,
        ClienteId = 0,
        Situacao = Situacao.Agendado
    };

    private DateTime dataEnsaio = DateTime.Today;
    private string horaEnsaio = "10:00";
    private List<ClienteModel> clientes = new();
    private bool salvando = false;
    private bool mostrarSucesso = false;
    private string mensagemErro = "";

    protected async override Task OnInitializedAsync()
    {
        await CarregarClientes();
    }

    private async Task CarregarClientes()
    {
        clientes = await DbContext.Clientes
        .AsNoTracking()
        .OrderBy(c => c.Nome)
        .ToListAsync();
    }

    private async Task SalvarEnsaio()
    {
        if (novoEnsaio.ClienteId == 0)
        {
            ToastService.Error("Selecione um cliente.");
            return;
        }

        salvando = true;

        try
        {
            // Combina data e hora
            var hora = TimeSpan.Parse(horaEnsaio);
            novoEnsaio.Data = dataEnsaio.Date.Add(hora);

            DbContext.Ensaios.Add(novoEnsaio);
            await DbContext.SaveChangesAsync();

            ToastService.Success("Ensaio criado com sucesso!");
            await Task.Delay(300);
            Navigation.NavigateTo("/ensaios");
        }
        catch (DbUpdateException ex)
        {
            ToastService.Error(ex.InnerException?.Message ?? ex.Message);
        }
        finally
        {
            salvando = false;
        }
    }


    private void LimparFormulario()
    {
        novoEnsaio = new()
        {
            Titulo = "",
            Tipo = TipoEnsaio.Retrato,
            Local = "",
            Data = DateTime.Now,
            ClienteId = 0,
            Situacao = Situacao.Agendado
        };
        dataEnsaio = DateTime.Today;
        horaEnsaio = "10:00";
    }

    private void Cancelar()
    {
        LimparFormulario();
        Navigation.NavigateTo("/ensaios");
    }
}