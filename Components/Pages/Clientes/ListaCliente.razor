        font-size: 1rem;
    }

    .btn {
        padding: 10px 26px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
</style>

@code {
    private List<ClienteModel> clientes = new();
    private List<ClienteModel> clientesFiltrados = new();
    private bool carregando = true;
    private string filtroBusca = "";
    private JanelaConfirmacao? janelaConfirmacao;

    protected override async Task OnInitializedAsync()
    {
        await CarregarClientes();
        AplicarFiltro();
    }

    private async Task CarregarClientes()
    {
        carregando = true;
        clientes = await Db.Clientes
                           .OrderBy(c => c.Nome)
                           .ToListAsync();

        clientesFiltrados = clientes;
        carregando = false;
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            clientesFiltrados = clientes;
        }
        else
        {
            clientesFiltrados = clientes
                .Where(c =>
                    c.Nome.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                    c.Email.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void CriarCliente()
    {
        Navigation.NavigateTo("/clientes/criarCliente");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/clientes/editar/{id}");
    }

    private async Task Excluir(int id)
    {
        if (janelaConfirmacao == null)
            return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado)
            return;

        var cliente = await Db.Clientes.FindAsync(id);
        if (cliente != null)
        {
            Db.Clientes.Remove(cliente);
            await Db.SaveChangesAsync();
            await CarregarClientes();
            ToastService.Success("Cliente excluído com sucesso!");
        }
    }
}
