@page "/clientes/editarCliente/{Id:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Clientes
@using PhotoStudio.app.Components.Shared
@inject NavigationManager Navigation
@inject ToastService ToastService
@inject ClienteService ClienteService
@attribute [Authorize]

<PageTitle>Cliente - Estúdio de Fotografia</PageTitle>

@* Componente de confirmação para exclusão *@
<JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Cliente" Message="Tem certeza que deseja excluir este cliente? Esta ação não pode ser desfeita." />

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div class="header-text">
                <h1>Cliente</h1>
            </div>

            @* Botões de Ação no Topo *@
            <div class="actions-right">
                <button type="button" class="btn btn-primary" @onclick="Salvar" disabled="@(salvando || carregando)">
                    @if (salvando)
                    {
                        <span class="spinner"></span>
                        <span>Salvando...</span>
                    }
                    else
                    {
                        <span>💾 Salvar</span>
                    }
                </button>

                @if (cliente != null && !carregando)
                {
                    <button type="button" class="btn-delete-header" @onclick="ExcluirCliente" title="Excluir cliente">
                        <span>🗑️ Excluir</span>
                    </button>
                }
            </div>
        </div>
    </div>

    @if (carregando)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Carregando dados do cliente...</p>
        </div>
    }
    else if (cliente == null)
    {
        <div class="error-container">
            <div class="error-icon">⚠️</div>
            <h3>Cliente não encontrado</h3>
            <p>O cliente que você está tentando editar não existe ou foi removido.</p>
            <button class="btn btn-secondary" @onclick="Voltar">Voltar para a Lista</button>
        </div>
    }
    else
    {
        <div class="form-container">
            <EditForm Model="@cliente" OnValidSubmit="Salvar">
                <DataAnnotationsValidator />

                <div class="form-grid">
                    <div class="form-group full-width">
                        <label for="nome">Nome Completo *</label>
                        <InputText id="nome" class="form-control" @bind-Value="cliente.Nome" placeholder="Ex: João da Silva" />
                        <ValidationMessage For="@(() => cliente.Nome)" />
                    </div>

                    <div class="form-group">
                        <label for="telefone">Telefone *</label>
                        <InputText id="telefone" class="form-control" @bind-Value="cliente.Telefone"
                                   @oninput="AplicarMascaraTelefone" maxlength="15" placeholder="(00) 00000-0000" />
                        <ValidationMessage For="@(() => cliente.Telefone)" />
                    </div>

                    <div class="form-group">
                        <label for="email">E-mail *</label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="cliente.Email" placeholder="exemplo@email.com" />
                        <ValidationMessage For="@(() => cliente.Email)" />
                    </div>

                    <div class="form-group full-width">
                        <label for="endereco">Endereço Completo *</label>
                        <InputText id="endereco" class="form-control" @bind-Value="cliente.Endereco" placeholder="Rua, Número, Bairro - Cidade/UF" />
                        <ValidationMessage For="@(() => cliente.Endereco)" />
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
