@code {
    private List<EnsaioModel> ensaios = new();
    private List<EnsaioModel> ensaiosFiltrados = new();
    private bool carregando = true;

    // Filtros
    private string filtroBusca = "";
    private DateTime? filtroData;
    private TipoEnsaio? filtroTipo;

    private JanelaConfirmacao? janelaConfirmacao;

    private bool TemFiltroAtivo => !string.IsNullOrWhiteSpace(filtroBusca) || filtroData.HasValue || filtroTipo.HasValue;

    protected override async Task OnInitializedAsync()
    {
        await CarregarEnsaios();
    }

    private async Task CarregarEnsaios()
    {
        carregando = true;
        try
        {
            ensaios = await EnsaioService.ListarTodosAsync();
            AplicarFiltro();
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar ensaios: {ex.Message}");
        }
        finally
        {
            carregando = false;
        }
    }

    private void AplicarFiltro()
    {
        var query = ensaios.AsQueryable();

        // 1. Filtro por texto (Título ou Nome do Cliente)
        if (!string.IsNullOrWhiteSpace(filtroBusca))
        {
            query = query.Where(e =>
                (e.Titulo != null && e.Titulo.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase)) ||
                (e.Cliente != null && e.Cliente.Nome != null && e.Cliente.Nome.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase))
            );
        }

        // 2. Filtro por Data
        if (filtroData.HasValue)
        {
            query = query.Where(e => e.Data.Date == filtroData.Value.Date);
        }

        // 3. Filtro por Tipo
        if (filtroTipo.HasValue)
        {
            query = query.Where(e => e.Tipo == filtroTipo.Value);
        }

        // Ordenação por data (mais recente primeiro)
        ensaiosFiltrados = query.OrderByDescending(e => e.Data).ToList();
    }

    private void LimparFiltros()
    {
        filtroBusca = string.Empty;
        filtroData = null;
        filtroTipo = null;
        AplicarFiltro();
    }

    private async Task Excluir(int id)
    {
        if (janelaConfirmacao == null) return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado) return;

        try
        {
            await EnsaioService.ExcluirAsync(id);
            await CarregarEnsaios();
            ToastService.Success("Ensaio excluído com sucesso!");
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao excluir ensaio: {ex.Message}");
        }
    }

    private void Editar(int id) => Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");
    private void IrParaCriarEnsaio() => Navigation.NavigateTo("/ensaios/criarEnsaio");

    private string ObterCorTipo(TipoEnsaio tipo) => tipo switch
    {
        TipoEnsaio.Casamento => "#f093fb",
        TipoEnsaio.Gestante => "#fa709a",
        TipoEnsaio.Infantil => "#4facfe",
        TipoEnsaio.Evento => "#43e97b",
        TipoEnsaio.Retrato => "#667eea",
        _ => "#a0aec0"
    };

    private string ObterCorSituacao(Situacao situacao) => situacao switch
    {
        Situacao.Cancelado => "#e53e3e",
        Situacao.Concluido => "#38a169",
        Situacao.Agendado => "#3182ce",
        Situacao.Confirmado => "#d69e2e",
        _ => "#a0aec0"
    };
}