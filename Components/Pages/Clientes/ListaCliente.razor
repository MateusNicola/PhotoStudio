@page "/clientes"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Clientes
@inject ClienteService ClienteService
@inject NavigationManager Navigation
@inject ToastService ToastService
@attribute [Authorize]

<PageTitle>Clientes</PageTitle>

<div class="page-container">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Cliente" Message="Tem certeza que deseja excluir este cliente?" />

    <div class="page-header">
        <h1>Clientes</h1>
        <p class="subtitle">Gerencie seus clientes cadastrados</p>
    </div>

    <div class="actions-bar">
        <div class="search-box">
            <span class="search-icon">🔍</span>
            <input type="text"
                   class="form-control"
                   placeholder="Buscar por nome ou email..."
                   @bind="filtroBusca"
                   @bind:event="oninput" />
        </div>

        <button class="btn btn-primary" @onclick="CriarCliente">
            ✚ Novo Cliente
        </button>
    </div>

    <div class="table-container">
        @if (carregando)
        {
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p>Carregando clientes...</p>
            </div>
        }
        else if (clientesFiltrados.Count == 0)
        {
            <div class="empty-state-container">
                <div class="empty-state-content">
                    <div class="empty-state-icon-wrapper">
                        <span class="empty-state-icon">👥</span>
                        <div class="empty-state-pulse"></div>
                    </div>
                    <h3>Nenhum cliente por aqui</h3>
                    <p>
                        @(string.IsNullOrWhiteSpace(filtroBusca)
                                            ? "Sua lista de contatos está vazia. Comece cadastrando seu primeiro cliente para gerenciar seus ensaios."
                                            : $"Não encontramos resultados para \"{filtroBusca}\". Tente ajustar sua busca.")
                </p>

                @if (string.IsNullOrWhiteSpace(filtroBusca))
                    {
                        <button class="btn btn-primary btn-lg" @onclick="CriarCliente">
                            <span>✚ Cadastrar Meu Primeiro Cliente</span>
                        </button>
                    }
                    else
                    {
                        <button class="btn-outline" @onclick="() => { filtroBusca = string.Empty; }">
                            Limpar Busca
                        </button>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="table-scroll">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th style="width: 30%;">Informações Pessoais</th>
                            <th style="width: 20%;">Contato</th>
                            <th style="width: 40%;">Endereço</th>
                            <th style="width: 10%; text-align: center;">País</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in clientesPaginados)
                        {
                            <tr @onclick="() => Editar(c.Id)" style="cursor: pointer;">
                                <td>
                                    <div class="info-pessoal">
                                        <div class="nome-row">
                                            <span class="avatar-icon">👤</span>
                                            <span class="nome-principal" title="@c.Nome">@c.Nome</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="contato-cell">
                                        <div class="contato-item">
                                            <span class="contato-icon">📞</span>
                                            <span class="contato-texto">@c.Telefone</span>
                                        </div>
                                        <div class="contato-item">
                                            <span class="contato-icon">✉️</span>
                                            <span class="contato-texto email-texto" title="@c.Email">@c.Email</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="endereco-info">
                                        <span class="endereco-icon">📍</span>
                                        <div class="endereco-detalhado">
                                            @if (!string.IsNullOrEmpty(c.CEP))
                                            {
                                                <span class="cep-tag">@c.CEP</span>
                                            }
                                            <span class="endereco-texto">
                                                @($"{c.Logradouro}{(string.IsNullOrEmpty(c.Numero) ? "" : ", " + c.Numero)}")
                                                @($"{(string.IsNullOrEmpty(c.Bairro) ? "" : " - " + c.Bairro)}")
                                                @($"{(string.IsNullOrEmpty(c.Cidade) ? "" : " | " + c.Cidade + "/" + c.Estado)}")
                                            </span>
                                        </div>
                                    </div>
                                </td>
                                <td style="text-align: center;">
                                    <span class="pais-texto">@(string.IsNullOrEmpty(c.Pais) ? "Brasil" : c.Pais)</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <footer class="pagination-container">
                <div class="pagination-info">Mostrando @clientesPaginados.Count() de @clientesFiltrados.Count clientes</div>
                <div class="pagination-controls">
                    <button class="btn-pager" disabled="@(paginaAtual == 1)" @onclick="() => MudarPagina(paginaAtual - 1)">
                        <span class="pager-icon">❮</span>
                        <span class="pager-text">Anterior</span>
                    </button>

                    <div class="pager-numbers">
                        @for (int i = 1; i <= totalPaginas; i++)
                        {
                            var p = i;
                            <button class="btn-number @(p == paginaAtual ? "active" : "")" @onclick="() => MudarPagina(p)">
                                @p
                            </button>
                        }
                    </div>

                    <button class="btn-pager" disabled="@(paginaAtual >= totalPaginas)" @onclick="() => MudarPagina(paginaAtual + 1)">
                        <span class="pager-text">Próximo</span>
                        <span class="pager-icon">❯</span>
                    </button>
                </div>
            </footer>
        }
    </div>
</div>

