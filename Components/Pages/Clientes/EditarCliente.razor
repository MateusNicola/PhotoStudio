    }

    .loading-spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e2e8f0;
        border-top-color: #667eea;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 20px;
    }

    .loading-container p {
        color: #718096;
        font-size: 1.1rem;
        margin: 0;
    }

    /* Error State */
    .error-container {
        background: white;
        border-radius: 12px;
        padding: 60px 32px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .error-icon {
        font-size: 4rem;
        margin-bottom: 16px;
    }

    .error-container h3 {
