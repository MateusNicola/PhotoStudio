@page "/"
@rendermode InteractiveServer
@using Microsoft.JSInterop
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@inject NavigationManager Navigation
@inject DashboardService DashboardService
@inject IJSRuntime JS

<PageTitle>Dashboard - Estúdio de Fotografia</PageTitle>

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-info">
            <h1 class="dashboard-title">Dashboard</h1>
            <p class="dashboard-subtitle">Visão geral do seu estúdio</p>
        </div>

        <div class="header-actions">
            <button class="btn-action btn-secondary" @onclick="CriarCliente" title="Cadastrar novo cliente">
                <span class="btn-icon">👤</span>
                <span>Novo Cliente</span>
            </button>

            <button class="btn-action btn-primary" @onclick="CriarNovoEnsaio" title="Agendar novo ensaio">
                <span class="btn-icon">📸</span>
                <span>Novo Ensaio</span>
            </button>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="cards-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <span>📸</span>
            </div>
            <div class="stat-content">
                <h3>Ensaios no Mês</h3>
                <p class="stat-number">@ensaiosMes</p>
                <small>@DateTime.Now.ToString("MMMM yyyy")</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <span>👥</span>
            </div>
            <div class="stat-content">
                <h3>Novos Clientes</h3>
                <p class="stat-number">@clientesNovosMes</p>
                <small>Neste mês</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <span>💰</span>
            </div>
            <div class="stat-content">
                <h3>Faturamento</h3>
                <p class="stat-number">@faturamentoMes.ToString("C")</p>
                <small>No mês atual</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <span>✅</span>
            </div>
            <div class="stat-content">
                <h3>Ensaios Concluídos</h3>
                <p class="stat-number">@ensaiosConcluidosMes</p>
                <small>Este mês</small>
            </div>
        </div>
    </div>

    <!-- Grid: Calendário + Próximos Ensaios -->
    <div class="content-grid">
        <!-- Calendário -->
        <div class="calendar-section">
            <div class="section-card">
                <div class="calendar-header">
                    <button class="nav-btn" @onclick="MesAnterior">‹</button>
                    <h2 class="calendar-title">@dataAtual.ToString("MMMM yyyy")</h2>
                    <button class="nav-btn" @onclick="ProximoMes">›</button>
                </div>

                <div class="calendar">
                    <div class="calendar-weekdays">
                        <div class="weekday">Dom</div>
                        <div class="weekday">Seg</div>
                        <div class="weekday">Ter</div>
                        <div class="weekday">Qua</div>
                        <div class="weekday">Qui</div>
                        <div class="weekday">Sex</div>
                        <div class="weekday">Sáb</div>
                    </div>

                    <div class="calendar-days">
                        @foreach (var diaCalendario in ObterDiasCalendario())
                        {
                            @if (diaCalendario == null)
                            {
                                <div class="calendar-day vazio"></div>
                            }
                            else
                            {
                                // Note que aqui usamos 'diaCalendario' para evitar o erro de escopo
                                var ensaiosDoDia = ObterEnsaiosDoDia(diaCalendario);
                                var isHoje = diaCalendario.Value.Date == DateTime.Today;
                                var isSelecionado = diaSelecionado.HasValue && diaSelecionado.Value.Date == diaCalendario.Value.Date;

                                <div class="calendar-day @(isHoje ? "hoje" : "") @(isSelecionado ? "selecionado" : "")"
                                     @onclick="() => SelecionarDia(diaCalendario.Value)">

                                    <span class="day-number">@diaCalendario.Value.Day</span>

                                    @if (ensaiosDoDia.Any())
                                    {
                                        <div class="ensaios-lista">
                                            @foreach (var ensaio in ensaiosDoDia.Take(2))
                                            {
                                                <div class="ensaio-badge" style="border-left-color:@ObterCorTipo(ensaio.Tipo)">
                                                    @ensaio.Titulo
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detalhes do Dia Selecionado -->
    @if (diaSelecionado.HasValue)
    {
        var ensaiosDia = ObterEnsaiosDoDia(diaSelecionado.Value);
        <div class="detalhes-dia" @ref="detalhesDiaRef">
            <div class="detalhes-header">
                <h3>
                    Ensaios em @diaSelecionado.Value.ToString("dd/MM/yyyy")
                    <small style="color:#718096; font-weight:500;">
                        (@ensaiosDia.Count)
                    </small>
                </h3>

                <button class="btn-fechar" @onclick="FecharDetalhes">✕</button>
            </div>

            @if (ensaiosDia.Any())
            {
                <div class="lista-ensaios">
                    @foreach (var ensaio in ensaiosDia.OrderBy(e => e.Data))
                    {
                        var cliente = clientes.FirstOrDefault(c => c.Id == ensaio.ClienteId);
                        <div class="ensaio-item" @onclick="() => EditarEnsaio(ensaio.Id)">
                            <div class="ensaio-header">
                                <div class="header-left">
                                    <span class="tipo-badge" style="background: @ObterCorTipo(ensaio.Tipo)">
                                        @ensaio.Tipo
                                    </span>
                                    <span class="situacao-badge" style="background: @ObterCorSituacao(ensaio.Situacao)">
                                        @ensaio.Situacao
                                    </span>
                                </div>
                                <span class="ensaio-hora">🕐 @ensaio.Data.ToString("HH:mm")</span>
                            </div>
                            <h4>@ensaio.Titulo</h4>
                            <div class="ensaio-detalhes">
                                <p><strong>👤 Cliente:</strong> @(cliente?.Nome ?? "N/A")</p>
                                <p><strong>📍 Local:</strong> @ensaio.Local</p>
                                @if (ensaio.Valor.HasValue)
                                {
                                    <p><strong>💰 Valor:</strong> @ensaio.Valor.Value.ToString("C")</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <span class="empty-icon">📷</span>
                    <p>Nenhum ensaio agendado para este dia</p>
                </div>
            }
        </div>
    }
