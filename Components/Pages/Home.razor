        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        transition: transform 0.2s;
        border: 1px solid rgba(255,255,255,0.5);
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--hover-shadow);
        }

    .stat-content {
        display: flex;
        flex-direction: column;
    }

    .stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--text-primary);
        letter-spacing: -0.02em;
    }

    .stat-footer {
        margin-top: 0.5rem;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .stat-icon-bg {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    /* Cores dos Ícones */
    .icon-purple {
        background: #eef2ff;
        color: #6366f1;
    }

    .icon-pink {
        background: #fdf2f8;
        color: #db2777;
    }

    .icon-blue {
        background: #eff6ff;
        color: #3b82f6;
    }

    .icon-green {
        background: #f0fdf4;
        color: #22c55e;
    }

    /* Seção de Ensaios */
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .title-group {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .title-group h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
        }

    .btn-text {
        background: none;
        border: none;
        color: #6366f1;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.9rem;
    }

        .btn-text:hover {
            text-decoration: underline;
        }

    .ensaios-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    /* Card de Ensaio */
    .ensaio-card {
        background: white;
        border-radius: var(--radius);
        box-shadow: var(--card-shadow);
        overflow: hidden;
        cursor: pointer;
        transition: all 0.2s ease;
        position: relative;
        display: flex;
    }

        .ensaio-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--hover-shadow);
        }

    .category-strip {
        width: 6px;
        height: 100%;
        flex-shrink: 0;
    }

    .ensaio-card-body {
        padding: 1.25rem;
        flex: 1;
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 1rem;
