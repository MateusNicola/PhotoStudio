@code {
    [Parameter] public int Id { get; set; }
    private UsuarioModel? userModel;
    private EditViewModel editModel = new();
    private bool isProcessing = false;

    protected override async Task OnInitializedAsync()
    {
        userModel = await AuthService.ObterPorIdAsync(Id);
        if (userModel != null)
        {
            editModel.Nome = userModel.Nome;            
            editModel.Identificacao = userModel.Identificacao;
        }
        else
        {
            ToastService.Error("Usuário não encontrado.");
            Voltar();
        }
    }

    private async Task HandleUpdate()
    {
        if (isProcessing || userModel == null) return;

        isProcessing = true;
        try
        {
            userModel.Nome = editModel.Nome;
            userModel.Identificacao = editModel.Identificacao;

            var sucesso = await AuthService.AtualizarUsuarioAsync(userModel, editModel.Senha);

            if (sucesso)
            {
                ToastService.Success("Usuário atualizado com sucesso!");
                await Task.Delay(1000);
                Voltar();
            }
            else
            {
                ToastService.Error("Erro ao atualizar usuário.");
            }
        }
        catch (Exception ex)
        {
            ToastService.Error("Erro de conexão com o banco.");
            Console.WriteLine(ex.Message);
        }
        finally
        {
            isProcessing = false;
        }
    }

    private void Voltar() => Navigation.NavigateTo("/usuarios");

    public class EditViewModel
    {
        [Required(ErrorMessage = "O nome é obrigatório")]
        public string Nome { get; set; } = "";

        [Required(ErrorMessage = "O login é obrigatório")]
        public string Identificacao { get; set; } = "";

        [MinLength(6, ErrorMessage = "A senha deve ter no mínimo 6 caracteres")]
        public string? Senha { get; set; }

        [Compare("Senha", ErrorMessage = "As senhas não conferem")]
        public string? ConfirmarSenha { get; set; }
    }
}