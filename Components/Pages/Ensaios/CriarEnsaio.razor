@code {
    // Inicialização obrigatória para campos 'required'
    private EnsaioModel novoEnsaio = new()
    {
        Titulo = "",
        Local = "",
        Situacao = Situacao.Agendado,
        Data = DateTime.Now,
        ClienteId = 0,
        CategoriaId = 0
    };

    private List<ClienteModel> clientes = new();
    private List<CategoriaModel> categorias = new();
    private DateTime dataEnsaio = DateTime.Today;
    private string horaEnsaio = "10:00";
    private bool salvando = false;
    private int idEnsaioCriado = 0; // Controle local já que o CriarAsync é void
    private JanelaConfirmacao? janelaConfirmacao;

    protected async override Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var claimId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

        if (int.TryParse(claimId, out int usuarioId))
        {
            clientes = await ClienteService.ListarTodosAsync();
            categorias = await CategoriaService.ListarPorUsuarioAsync(usuarioId);
        }
    }

    private async Task SalvarEnsaio()
    {
        if (novoEnsaio.ClienteId == 0)
        {
            ToastService.Error("Selecione um cliente.");
            return;
        }

        if (novoEnsaio.CategoriaId == 0)
        {
            ToastService.Error("Selecione uma categoria.");
            return;
        }

        salvando = true;
        try
        {
            if (TimeSpan.TryParse(horaEnsaio, out var hora))
            {
                novoEnsaio.Data = dataEnsaio.Date.Add(hora);
            }

            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var claimId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (int.TryParse(claimId, out int uId)) novoEnsaio.UsuarioId = uId.ToString();

            if (idEnsaioCriado == 0)
            {
                await EnsaioService.CriarAsync(novoEnsaio);
                ToastService.Success("Ensaio criado com sucesso!");
                await Task.Delay(1000);
                Voltar();
            }
            else
            {
                await EnsaioService.AtualizarAsync(novoEnsaio);
                ToastService.Success("Ensaio atualizado!");
            }
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro: {ex.Message}");
        }
        finally { salvando = false; }
    }

    private async Task ExcluirEnsaio()
    {
        if (janelaConfirmacao == null) return;
        if (await janelaConfirmacao.Show())
        {
            await EnsaioService.ExcluirAsync(novoEnsaio.Id);
            await Task.Delay(1000);
            Voltar();
        }
    }

    private void Voltar() => Navigation.NavigateTo("/ensaios");
}