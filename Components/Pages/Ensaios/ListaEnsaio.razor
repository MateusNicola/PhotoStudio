    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.85rem;
        font-weight: 800;
        color: var(--text-main);
        margin: 0;
    }

    .page-subtitle {
        color: var(--text-muted);
        margin-top: 0.25rem;
    }

    /* Toolbar & Filtros */
    .toolbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        gap: 1rem;
    }

    .filters-container {
        display: flex;
        gap: 0.75rem;
        align-items: center;
        flex: 1;
    }

    .search-wrapper {
        position: relative;
        width: 280px;
    }

    .search-input {
        width: 100%;
        padding: 10px 12px 10px 38px;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: white;
        font-size: 0.9rem;
    }

    .search-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
    }

    .filter-select {
        padding: 9px 12px;
        border-radius: 10px;
        border: 1px solid var(--border-color);
        background: white;
