@page "/ensaios"
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Data
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Ensaios
@rendermode InteractiveServer
@inject EnsaioService EnsaioService
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Ensaios - Estúdio de Fotografia</PageTitle>

<div class="page-container">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Ensaio" Message="Tem certeza que deseja excluir este ensaio?" />

    <div class="page-header">
        <h1>Ensaios</h1>
        <p class="subtitle">Gerencie seus ensaios fotográficos</p>
    </div>

    <div class="actions-bar">
        <div class="filters-group">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text"
                       class="form-control"
                       placeholder="Título ou cliente..."
                       @bind-value="filtroBusca"
                       @bind-value:event="oninput"
                       @onkeyup="AplicarFiltro" />
            </div>

            <div class="filter-item">
                <input type="date"
                       class="form-control"
                       @bind="filtroData"
                       @bind:after="AplicarFiltro" />
            </div>

            <div class="filter-item">
                <select class="form-control" @bind="filtroTipo" @bind:after="AplicarFiltro">
                    <option value="">Todos os Tipos</option>
                    @foreach (var tipo in Enum.GetValues<TipoEnsaio>())
                    {
                        <option value="@tipo">@tipo</option>
                    }
                </select>
            </div>

            @if (TemFiltroAtivo)
            {
                <button class="btn-clear" @onclick="LimparFiltros" title="Limpar Filtros">🗑</button>
            }
        </div>

        <button class="btn btn-primary" @onclick="IrParaCriarEnsaio">
            <span>📸</span>
            <span>Novo Ensaio</span>
        </button>
    </div>

    <div class="table-container">
        @if (carregando)
        {
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p>Carregando ensaios...</p>
            </div>
        }
        else if (ensaiosFiltrados.Count == 0)
        {
            <div class="empty-message">
                <div class="empty-icon">📷</div>
                <h3>Nenhum ensaio encontrado</h3>
                <p>@(TemFiltroAtivo ? "Tente ajustar os filtros de busca." : "Comece criando seu primeiro ensaio.")</p>
            </div>
        }
        else
        {
            <div class="table-scroll">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th style="width: 35%;">Informações do Ensaio</th>
                            <th style="width: 20%;">Data e Hora</th>
                            <th style="width: 20%;">Local</th>
                            <th style="width: 12%;">Financeiro</th>
                            <th style="width: 13%; text-align: center;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in ensaiosFiltrados)
                        {
                            <tr @onclick="() => Editar(e.Id)" style="cursor: pointer;">
                                <td>
                                    <div class="info-cell">
                                        <div class="titulo-row">
                                            <span class="titulo-principal" title="@e.Titulo">@e.Titulo</span>
                                            <span class="tipo-badge" style="background: @ObterCorTipo(e.Tipo)">
                                                @e.Tipo.ToString()
                                            </span>
                                        </div>
                                        <div class="cliente-row">
                                            <span class="label-icon">👤</span>
                                            <span class="cliente-nome" title="@e.Cliente.Nome">@e.Cliente.Nome</span>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="data-info">
                                        <span class="data">📅 @e.Data.ToString("dd/MM/yyyy")</span>
                                        <span class="hora">🕐 @e.Data.ToString("HH:mm")</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="local-info">
                                        <span class="local-icon">📍</span>
                                        <span class="local-texto" title="@e.Local">@e.Local</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="financeiro-cell">
                                        <span class="valor-texto">
                                            @(e.Valor.HasValue? e.Valor.Value.ToString("C") : "-")
                                        </span>
                                        <span class="situacao-badge" style="background: @ObterCorSituacao(e.Situacao)">
                                            @e.Situacao.ToString()
                                        </span>
                                    </div>
                                </td>
                                <td class="actions-cell">
                                    <button class="icon-btn delete"
                                            title="Excluir"
                                            @onclick="() => Excluir(e.Id)"
                                            @onclick:stopPropagation="true">
                                        ✕
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <span>Total: @ensaiosFiltrados.Count ensaio(s)</span>
            </div>
        }
    </div>
</div>

