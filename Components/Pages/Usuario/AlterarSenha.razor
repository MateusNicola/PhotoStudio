@code {
    private ChangePasswordModel model = new();
    private bool isProcessing = false;

    private async Task HandleSubmit()
    {
        if (isProcessing) return;

        isProcessing = true;
        StateHasChanged(); // Força o Blazor a mostrar o spinner imediatamente

        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var login = authState.User.Identity?.Name;

            if (string.IsNullOrEmpty(login))
            {
                ToastService.Error("Sessão expirada.");
                return;
            }

            var resultado = await AuthService.AlterarSenhaPropriaAsync(login, model.SenhaAtual, model.NovaSenha);

            if (resultado.Sucesso)
            {
                ToastService.Success(resultado.Mensagem);
                Navigation.NavigateTo("/");
            }
            else
            {
                ToastService.Error(resultado.Mensagem);
            }
        }
        catch (Exception ex)
        {
            ToastService.Error("Erro ao processar solicitação.");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    public class ChangePasswordModel
    {
        [Required(ErrorMessage = "Informe a senha atual")]
        public string SenhaAtual { get; set; } = "";

        [Required(ErrorMessage = "A nova senha é obrigatória")]
        [MinLength(6, ErrorMessage = "A nova senha deve ter no menos 6 caracteres")]
        public string NovaSenha { get; set; } = "";

        [Compare("NovaSenha", ErrorMessage = "As senhas não conferem")]
        public string ConfirmarSenha { get; set; } = "";
    }
}