@page "/ensaios"
@using PhotoStudio.app.Models
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>Ensaios</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>Ensaios</h1>
        <p class="subtitle">Gerencie seus ensaios fotográficos</p>
    </div>

    <!-- Barra de Ações -->
    <div class="actions-bar">
        <div class="search-box">
            <input type="text" class="form-control" placeholder="Buscar ensaio..."
                   @bind="filtroBusca" @bind:event="oninput" />
        </div>

        <button class="btn btn-primary" @onclick="IrParaCriarEnsaio">
            + Novo Ensaio
        </button>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        @if (carregando)
        {
            <div class="loading">Carregando ensaios...</div>
        }
        else if (ensaiosFiltrados.Count == 0)
        {
            <div class="empty-message">
                Nenhum ensaio encontrado.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Tipo</th>
                        <th>Data</th>
                        <th>Local</th>
                        <th>Valor</th>
                        <th>Cliente</th>
                        <th style="width:120px">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in ensaiosFiltrados)
                    {
                        <tr>
                            <td>@e.Titulo</td>
                            <td>@e.Tipo.ToString()</td>
                            <td>@e.Data.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@e.Local</td>
                            <td>@(e.Valor.HasValue? e.Valor.Value.ToString("C") : "-")</td>
                            <td>@e.ClienteId</td>
                            <td class="actions-cell">
                                <button class="icon-btn edit" title="Editar" @onclick="() => Editar(e.Id)">
                                    ✎
                                </button>
                                <button class="icon-btn delete" title="Excluir" @onclick="() => Excluir(e.Id)">
                                    ✕
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<style>
    .page-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto;
    }

    .page-header h1 {
        font-size: 2.4rem;
        color: #2d3748;
        margin-bottom: 5px;
    }

    .subtitle {
        color: #718096;
        margin-bottom: 25px;
    }

    .actions-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 12px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 200px;
    }

    .form-control {
        padding: 10px 14px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        width: 100%;
        font-size: 1rem;
    }

    .table-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow-x: auto;
        padding: 10px;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
    }

        .styled-table th {
            text-align: left;
            background: #f7fafc;
            padding: 12px;
            font-weight: 600;
            color: #4a5568;
            border-bottom: 2px solid #e2e8f0;
        }

        .styled-table td {
            padding: 12px;
            border-bottom: 1px solid #edf2f7;
            color: #2d3748;
        }

        .styled-table tr:hover {
            background: #f7faff;
        }

    .actions-cell {
        display: flex;
        gap: 10px;
    }

    .icon-btn {
        border: none;
        background: none;
        font-size: 1.1rem;
        cursor: pointer;
        padding: 6px;
        border-radius: 6px;
        transition: 0.2s;
    }

        .icon-btn.edit:hover {
            background: #ebf8ff;
            color: #3182ce;
        }

        .icon-btn.delete:hover {
            background: #fff5f5;
            color: #e53e3e;
        }

    .loading,
    .empty-message {
        padding: 25px;
        text-align: center;
        color: #4a5568;
        font-size: 1rem;
    }

    .btn {
        padding: 10px 26px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: 600;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }
</style>

@code {
    private List<EnsaioModel> ensaios = new();
    private List<EnsaioModel> ensaiosFiltrados = new();
    private bool carregando = true;
    private string filtroBusca = "";

    protected override void OnInitialized()
    {
        CarregarEnsaios();
        AplicarFiltro();
    }

    private void CarregarEnsaios()
    {
        // Mock — substitua pela chamada à API
        var rnd = new Random();

        for (int i = 1; i <= 20; i++)
        {
            ensaios.Add(new EnsaioModel
            {
                Id = i,
                Titulo = $"Ensaio {i}",
                Tipo = (TipoEnsaio)(i % Enum.GetValues(typeof(TipoEnsaio)).Length),
                Data = DateTime.Now.AddDays(i),
                Local = $"Local {i}",
                Valor = rnd.Next(300, 1500),
                ClienteId = rnd.Next(1, 10)
            });
        }

        carregando = false;
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            ensaiosFiltrados = ensaios.ToList();
        }
        else
        {
            ensaiosFiltrados = ensaios
                .Where(x =>
                    x.Titulo.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                    x.Tipo.ToString().Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                    x.ClienteId.ToString().Contains(filtroBusca))
                .ToList();
        }
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/ensaios/editar/{id}");
    }

    private void Excluir(int id)
    {
        ensaios.RemoveAll(x => x.Id == id);
        AplicarFiltro();
        StateHasChanged();
    }

    private void IrParaCriarEnsaio()
    {
        Navigation.NavigateTo("/ensaios/criarEnsaio");
    }
}
