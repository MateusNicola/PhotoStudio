@page "/ensaios/criarEnsaio"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Data
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Clientes
@using PhotoStudio.app.Services.Ensaios
@inject NavigationManager Navigation
@inject EnsaioService EnsaioService
@inject ClienteService ClienteService
@inject ToastService ToastService
@inject CategoriaService CategoriaService
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Ensaio - Estúdio de Fotografia</PageTitle>
<JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Ensaio" Message="Tem certeza que deseja excluir este ensaio? Esta ação não pode ser desfeita." />

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div class="header-text">
                <h1>@(idEnsaioCriado > 0 ? "Ensaio" : "Ensaio")</h1>
            </div>

            <div class="actions-right">
                <button type="button" class="btn btn-primary" @onclick="() => SalvarEnsaio()" disabled="@salvando">
                    @if (salvando)
                    {
                        <span class="spinner"></span>
                        <span>Salvando...</span>
                    }
                    else
                    {
                        <span>💾 Salvar</span>
                    }
                </button>

                @if (idEnsaioCriado > 0)
                {
                    <button class="btn-delete-header" @onclick="() => ExcluirEnsaio()" title="Excluir ensaio">
                        <span>🗑️</span>
                        <span>Excluir</span>
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="form-container">
        <EditForm Model="@novoEnsaio" OnValidSubmit="@SalvarEnsaio">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="form-group full-width">
                    <label for="titulo">Título do Ensaio *</label>
                    <InputText id="titulo" @bind-Value="novoEnsaio.Titulo" class="form-control" />
                    <ValidationMessage For="@(() => novoEnsaio.Titulo)" />
                </div>

                <div class="form-group">
                    <div class="label-with-button">
                        <label for="categoria">Categoria *</label>                        
                    </div>
                    <select id="categoria" @bind="novoEnsaio.CategoriaId" class="form-control">
                        <option value="0">Selecione a categoria</option>
                        @foreach (var cat in categorias)
                        {
                            <option value="@cat.Id">@cat.Codigo - @cat.Descricao</option>
                        }
                    </select>
                    @if (novoEnsaio.CategoriaId == 0)
                    {
                        <span class="validation-message">A categoria é obrigatória.</span>
                    }
                </div>

                <div class="form-group">
                    <label for="cliente">Cliente *</label>
                    <select id="cliente" @bind="novoEnsaio.ClienteId" class="form-control">
                        <option value="0">Selecione o cliente</option>
                        @foreach (var cliente in clientes)
                        {
                            <option value="@cliente.Id">@cliente.Nome</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="data">Data *</label>
                    <InputDate id="data" @bind-Value="dataEnsaio" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="hora">Horário *</label>
                    <InputText id="hora" type="time" @bind-Value="horaEnsaio" class="form-control" />
                </div>

                <div class="form-group full-width">
                    <label for="local">Local *</label>
                    <InputText id="local" @bind-Value="novoEnsaio.Local" class="form-control" />
                    <ValidationMessage For="@(() => novoEnsaio.Local)" />
                </div>

                <div class="form-group">
                    <label for="valor">Valor (R$)</label>
                    <InputNumber TValue="decimal?" id="valor" @bind-Value="novoEnsaio.Valor" class="form-control" />
                </div>

                @if (idEnsaioCriado > 0)
                {
                    <div class="form-group">
                        <label for="situacao">Situação *</label>
                        <InputSelect id="situacao" @bind-Value="novoEnsaio.Situacao" class="form-control">
                            @foreach (var situacao in Enum.GetValues<Situacao>())
                            {
                                <option value="@situacao">@situacao</option>
                            }
                        </InputSelect>
                    </div>
                }
            </div>
        </EditForm>
    </div>
</div>

