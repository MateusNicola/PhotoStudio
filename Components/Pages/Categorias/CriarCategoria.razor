@page "/categorias/criar"
@rendermode InteractiveServer
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@inject AppDbContext DbContext
@inject CategoriaService CategoriaService
@inject NavigationManager Navigation
@inject ToastService ToastService
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Nova Categoria - Estúdio de Fotografia</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div>
                <h1>Nova Categoria</h1>
                <p class="subtitle">Adicione uma nova categoria de ensaio personalizada</p>
            </div>
        </div>
    </div>

    <div class="form-container">
        <EditForm Model="@novaCategoria" OnValidSubmit="Salvar">
            <DataAnnotationsValidator />

            <div class="form-grid">
                <div class="form-group">
                    <label for="codigo">Código *</label>
                    <InputText id="codigo" class="form-control" @bind-Value="novaCategoria.Codigo"
                               placeholder="Ex: CASA" maxlength="5"
                               style="text-transform: uppercase;" />
                    <span class="field-hint">Máximo 5 caracteres.</span>
                    <ValidationMessage For="@(() => novaCategoria.Codigo)" />
                </div>

                <div class="form-group">
                    <label for="cor">Cor de Identificação *</label>
                    <div class="color-picker-wrapper">
                        <InputText type="color" id="cor" class="form-control color-input" @bind-Value="novaCategoria.Cor" />
                        <span class="color-hex">@novaCategoria.Cor</span>
                    </div>
                    <span class="field-hint">Usada para identificar na agenda.</span>
                    <ValidationMessage For="@(() => novaCategoria.Cor)" />
                </div>

                <div class="form-group full-width">
                    <label for="descricao">Descrição *</label>
                    <InputText id="descricao" class="form-control" @bind-Value="novaCategoria.Descricao"
                               placeholder="Ex: Ensaio de Casamento" maxlength="250" />
                    <ValidationMessage For="@(() => novaCategoria.Descricao)" />
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" @onclick="Voltar" disabled="@salvando">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary" disabled="@salvando">
                    @if (salvando)
                    {
                        <span class="spinner"></span>
                        <span>Salvando...</span>
                    }
                    else
                    {
                        <span>✓ Criar Categoria</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

