@page "/"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@inject NavigationManager Navigation
@inject DashboardService DashboardService
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Dashboard | Photo Studio</PageTitle>

<div class="dashboard-container fade-in">
    <div class="dashboard-header">
        <div class="header-info">
            <h1 class="dashboard-title">Olá, @userName!</h1>
            <p class="dashboard-subtitle">Aqui está o resumo do seu estúdio hoje.</p>
        </div>

        <div class="header-actions">
            <button class="btn-modern btn-outline" @onclick="CriarCliente" title="Cadastrar novo cliente">
                <span class="icon">👤</span>
                <span>Novo Cliente</span>
            </button>

            <button class="btn-modern btn-gradient" @onclick="CriarNovoEnsaio" title="Agendar novo ensaio">
                <span class="icon">📸</span>
                <span>Novo Ensaio</span>
            </button>
        </div>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-content">
                <span class="stat-label">Ensaios no Mês</span>
                <span class="stat-value">@ensaiosMes</span>
                <div class="stat-footer">
                    <span class="trend positive">📅 @DateTime.Now.ToString("MMMM")</span>
                </div>
            </div>
            <div class="stat-icon-bg icon-purple">
                📸
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-content">
                <span class="stat-label">Novos Clientes</span>
                <span class="stat-value">@clientesNovosMes</span>
                <div class="stat-footer">
                    <span class="trend neutral">👥 Neste mês</span>
                </div>
            </div>
            <div class="stat-icon-bg icon-pink">
                👤
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-content">
                <span class="stat-label">Faturamento</span>
                <span class="stat-value">@faturamentoMes.ToString("C")</span>
                <div class="stat-footer">
                    <span class="trend success">💰 Consolidado</span>
                </div>
            </div>
            <div class="stat-icon-bg icon-blue">
                💲
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-content">
                <span class="stat-label">Ensaios Concluídos</span>
                <span class="stat-value">@ensaiosConcluidosMes</span>
                <div class="stat-footer">
                    <span class="trend success">✅ Finalizados</span>
                </div>
            </div>
            <div class="stat-icon-bg icon-green">
                ✨
            </div>
        </div>
    </div>

    <div class="section-container">
        <div class="section-header">
            <div class="title-group">
                <span class="title-icon">🗓️</span>
                <h3>Próximos Ensaios</h3>
            </div>
            <button class="btn-text" @onclick='() => Navigation.NavigateTo("ensaios")'>Ver agenda completa →</button>
        </div>

        <div class="ensaios-grid">
            @* Apliquei o filtro de Confirmado conforme conversamos *@
            @if (ensaios.Any(e => e.Data >= DateTime.Today && e.Situacao == Situacao.Confirmado))
            {
                @foreach (var ensaio in ensaios.Where(e => e.Data >= DateTime.Today && e.Situacao == Situacao.Confirmado).OrderBy(e => e.Data).Take(6))
                {
                    var diasRestantes = (ensaio.Data.Date - DateTime.Today).Days;
                    var corCategoria = ObterCorCategoria(ensaio);

                    <div class="ensaio-card" @onclick="() => EditarEnsaio(ensaio.Id)">
                        <div class="category-strip" style="background-color: @corCategoria"></div>

                        <div class="ensaio-card-body">
                            <div class="ensaio-date-box">
                                <span class="month">@ensaio.Data.ToString("MMM").ToUpper()</span>
                                <span class="day">@ensaio.Data.Day</span>
                            </div>

                            <div class="ensaio-details">
                                <h4 class="ensaio-title">@ensaio.Titulo</h4>
                                <div class="ensaio-meta">
                                    <span class="meta-item time">⏰ @ensaio.Data.ToString("HH:mm")</span>
                                    @if (ensaio.Categoria != null)
                                    {
                                        <span class="category-badge" style="color: @corCategoria">● @ensaio.Categoria.Descricao</span>
                                    }
                                </div>
                            </div>

                            <div class="ensaio-status">
                                <span class="status-badge" style="background-color: @ObterCorSituacao(ensaio.Situacao)">
                                    @ensaio.Situacao
                                </span>
                                <small class="countdown @(diasRestantes <= 2 ? "urgente" : "")">
                                    @(diasRestantes == 0 ? "É hoje!" : diasRestantes == 1 ? "Amanhã" : $"Em {diasRestantes} dias")
                                </small>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">☕</div>
                    <p>Tudo tranquilo! Nenhum ensaio confirmado para os próximos dias.</p>
                    <button class="btn-modern btn-outline sm" @onclick="CriarNovoEnsaio">Agendar Agora</button>
                </div>
            }
        </div>
    </div>
</div>

<style>
