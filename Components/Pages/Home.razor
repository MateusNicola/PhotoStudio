        font-size: 2rem;
        font-weight: 800;
        color: var(--text-primary);
        margin: 0;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        color: var(--text-secondary);
        margin-top: 0.5rem;
        font-size: 1rem;
    }

    .header-actions {
        display: flex;
        gap: 1rem;
    }

