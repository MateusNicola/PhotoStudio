            order: 3;
            width: 100%;
            justify-content: center;
        }

        .page-header h1 {
            font-size: 1.5rem;
        }
    }
</style>

@code {
    [Parameter] public int Id { get; set; }

    private ClienteModel? cliente;
    private bool carregando = true;
    private bool salvando = false;
    private JanelaConfirmacao? janelaConfirmacao;

    protected override async Task OnInitializedAsync()
    {
        await CarregarCliente();
    }

    private async Task CarregarCliente()
    {
        carregando = true;
        try
        {
            cliente = await ClienteService.ObterPorIdAsync(Id);
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar: {ex.Message}");
        }
        finally { carregando = false; }
    }

    private async Task Salvar()
    {
        if (cliente == null) return;
        salvando = true;
        try
        {
            await ClienteService.AtualizarAsync(cliente);
            ToastService.Success("Alterações salvas com sucesso!");
            await Task.Delay(1000);
            Voltar();
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao salvar: {ex.Message}");
        }
        finally { salvando = false; }
    }

    private async Task ExcluirCliente()
    {
        if (janelaConfirmacao != null && await janelaConfirmacao.Show())
        {
            try
            {
                await ClienteService.ExcluirAsync(Id);
                ToastService.Success("Cliente removido com sucesso!");
                await Task.Delay(1000);
                Voltar();
            }
            catch (Exception ex)
            {
                ToastService.Error("Não foi possível excluir o cliente.");
            }
        }
    }

    private void AplicarMascaraTelefone(ChangeEventArgs e)
    {
        if (cliente == null) return;
        var val = e.Value?.ToString() ?? "";
        var numeros = new string(val.Where(char.IsDigit).ToArray());

        if (numeros.Length > 11) numeros = numeros.Substring(0, 11);

        if (numeros.Length <= 2)
            cliente.Telefone = numeros.Length > 0 ? $"({numeros}" : "";
        else if (numeros.Length <= 7)
            cliente.Telefone = $"({numeros.Substring(0, 2)}) {numeros.Substring(2)}";
        else
            cliente.Telefone = $"({numeros.Substring(0, 2)}) {numeros.Substring(2, 5)}-{numeros.Substring(7)}";
    }

    private void Voltar() => Navigation.NavigateTo("/clientes");
}