@page "/clientes"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@inject AppDbContext Db
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject ToastService ToastService

<PageTitle>Clientes</PageTitle>

<div class="page-container">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Cliente" Message="Tem certeza que deseja excluir este cliente?" />
    <div class="page-header">
        <h1>Clientes</h1>
        <p class="subtitle">Gerencie seus clientes cadastrados</p>
    </div>

    <!-- Barra de Ações -->
    <div class="actions-bar">
        <div class="search-box">
            <input type="text"
                   class="form-control"
                   placeholder="Buscar cliente..."
                   @bind="filtroBusca"
                   @bind:event="oninput" />
        </div>

        <button class="btn btn-primary" @onclick="CriarCliente">
            + Novo Cliente
        </button>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        @if (carregando)
        {
            <div class="loading">Carregando clientes...</div>
        }
        else if (clientesFiltrados.Count == 0)
        {
            <div class="empty-message">
                Nenhum cliente encontrado.
            </div>
        }
        else
        {
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Endereço</th>
                        <th style="width:120px">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in clientesFiltrados)
                    {
                        <tr>
                            <td>@c.Nome</td>
                            <td>@c.Telefone</td>
                            <td>@c.Email</td>
                            <td>@c.Endereco</td>
                            <td class="actions-cell">
                                <button class="icon-btn edit"
                                        title="Editar"
                                        @onclick="() => Editar(c.Id)">
                                    ✎
                                </button>
                                <button class="icon-btn delete"
                                        title="Excluir"
                                        @onclick="() => Excluir(c.Id)">
                                    ✕
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<style>
