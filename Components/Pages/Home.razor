@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize]

<PageTitle>Estúdio de Fotografia</PageTitle>

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-info">
            <h1 class="dashboard-title">
                Olá, @userName!
            </h1>
            <p class="dashboard-subtitle">Seja bem-vindo ao painel do seu estúdio</p>
        </div>

        <div class="header-actions">
            <button class="btn-action btn-secondary" @onclick="CriarCliente" title="Cadastrar novo cliente">
                <span class="btn-icon">👤</span>
                <span>Novo Cliente</span>
            </button>

            <button class="btn-action btn-primary" @onclick="CriarNovoEnsaio" title="Agendar novo ensaio">
                <span class="btn-icon">📸</span>
                <span>Novo Ensaio</span>
            </button>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="cards-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <span>📸</span>
            </div>
            <div class="stat-content">
                <h3>Ensaios no Mês</h3>
                <p class="stat-number">@ensaiosMes</p>
                <small>@DateTime.Now.ToString("MMMM yyyy")</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <span>👥</span>
            </div>
            <div class="stat-content">
                <h3>Novos Clientes</h3>
                <p class="stat-number">@clientesNovosMes</p>
                <small>Neste mês</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <span>💰</span>
            </div>
            <div class="stat-content">
                <h3>Faturamento</h3>
                <p class="stat-number">@faturamentoMes.ToString("C")</p>
                <small>No mês atual</small>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <span>✅</span>
            </div>
            <div class="stat-content">
                <h3>Ensaios Concluídos</h3>
                <p class="stat-number">@ensaiosConcluidosMes</p>
                <small>Este mês</small>
            </div>
        </div>
    </div>

    <div class="proximos-ensaios-container">
        <div class="section-card full-width-card">
            <div class="section-header-row">
                <h3 class="section-title">
                    <span class="title-icon">🗓️</span> Próximos Ensaios da Agenda
                </h3>
                <button class="btn-link" @onclick='() => Navigation.NavigateTo("ensaios")'>Ver todos</button>
            </div>

            <div class="ensaios-horizontal-list">
                @if (ensaios.Any(e => e.Data >= DateTime.Today))
                {
                    @foreach (var ensaio in ensaios.Where(e => e.Data >= DateTime.Today).OrderBy(e => e.Data).Take(7))
                    {
                        var diasRestantes = (ensaio.Data.Date - DateTime.Today).Days;

                        <div class="ensaio-horizontal-item" @onclick="() => EditarEnsaio(ensaio.Id)">
                            <div class="date-badge">
                                <span class="month">@ensaio.Data.ToString("MMM")</span>
                                <span class="day">@ensaio.Data.Day</span>
                            </div>

                            <div class="ensaio-info">
                                <h4 style="white-space: normal; word-break: break-word; overflow: visible; max-width: none;">
                                    @ensaio.Titulo
                                </h4>

                                <div class="ensaio-meta">
                                    <span>🕐 @ensaio.Data.ToString("HH:mm")</span>
                                    <span class="dias-contagem @(diasRestantes <= 2 ? "urgente" : "")">
                                        @(diasRestantes == 0 ? "Hoje" : diasRestantes == 1 ? "Amanhã" : $"Em {diasRestantes} dias")
                                    </span>
                                </div>

                                <div style="margin-top: 8px; display: flex; gap: 8px; align-items: center; flex-wrap: wrap;">
                                    <span class="situacao-badge-mini" style="background-color: @ObterCorSituacao(ensaio.Situacao)">
                                        @ensaio.Situacao.ToString()
                                    </span>

                                    <span style="font-size: 0.75rem; color: @(ensaio.Categoria?.Cor ?? "#a0aec0"); font-weight: bold;">
                                        • @ensaio.Categoria?.Descricao
                                    </span>
                                </div>
                            </div>
                            <div class="tipo-tag" style="background: @(ensaio.Categoria?.Cor ?? "#a0aec0")"></div>
                        </div>
                    }
                }
                else
                {
                    <p class="empty-msg">Não há ensaios futuros agendados.</p>
                }
            </div>
        </div>
    </div>
