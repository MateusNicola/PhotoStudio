            text-align: left;
            background: #f7fafc;
            padding: 12px;
            font-weight: 600;
            color: #4a5568;
            border-bottom: 2px solid #e2e8f0;
        }

        .styled-table td {
            padding: 12px;
            border-bottom: 1px solid #edf2f7;
            color: #2d3748;
        }

        .styled-table tr:hover {
            background: #f7faff;
        }

