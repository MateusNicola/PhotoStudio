        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 12px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 200px;
    }

    .form-control {
        padding: 10px 14px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        width: 100%;
        font-size: 1rem;
    }

