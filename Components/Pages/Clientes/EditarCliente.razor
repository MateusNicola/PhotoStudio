@page "/clientes/editarCliente/{Id:int}"
@rendermode InteractiveServer
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Editar Cliente - Estúdio de Fotografia</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div>
                <h1>Editar Cliente</h1>
                <p class="subtitle">Atualize as informações do cliente</p>
            </div>
        </div>
    </div>

    @if (carregando)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Carregando dados do cliente...</p>
        </div>
    }
    else if (cliente == null)
    {
        <div class="error-container">
            <div class="error-icon">⚠️</div>
            <h3>Cliente não encontrado</h3>
            <p>O cliente que você está tentando editar não existe.</p>
            <button class="btn btn-primary" @onclick="Voltar">
                Voltar para Clientes
            </button>
        </div>
    }
    else
    {
        <div class="form-container">
            <EditForm Model="@cliente" OnValidSubmit="Salvar">
                <DataAnnotationsValidator />

                <div class="form-grid">
                    <!-- Nome -->
                    <div class="form-group full-width">
                        <label for="nome">Nome Completo *</label>
                        <InputText id="nome" class="form-control" @bind-Value="cliente.Nome"
                                   placeholder="Ex: João da Silva" />
                        <ValidationMessage For="@(() => cliente.Nome)" />
                    </div>

                    <!-- Telefone -->
                    <div class="form-group">
                        <label for="telefone">Telefone *</label>
                        <InputText id="telefone"
                                   class="form-control"
                                   @bind-Value="cliente.Telefone"
                                   @oninput="AplicarMascaraTelefone"
                                   maxlength="14"
                                   placeholder="(00) 000000000" />
                        <ValidationMessage For="@(() => cliente.Telefone)" />
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="email">E-mail *</label>
                        <InputText id="email" type="email" class="form-control" @bind-Value="cliente.Email"
                                   placeholder="exemplo@email.com" />
                        <ValidationMessage For="@(() => cliente.Email)" />
                    </div>

                    <!-- Endereço -->
                    <div class="form-group full-width">
                        <label for="endereco">Endereço Completo *</label>
                        <InputText id="endereco" class="form-control" @bind-Value="cliente.Endereco"
                                   placeholder="Rua, Número, Bairro - Cidade/UF" />
                        <ValidationMessage For="@(() => cliente.Endereco)" />
                    </div>
                </div>

                <!-- Botões de Ação -->
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Voltar" disabled="@salvando">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" disabled="@salvando">
                        @if (salvando)
                        {
                            <span class="spinner"></span>
                            <span>Salvando...</span>
                        }
                        else
                        {
                            <span>💾 Salvar Alterações</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

