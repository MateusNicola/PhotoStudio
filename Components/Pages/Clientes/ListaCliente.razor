@page "/clientes"
@rendermode InteractiveServer
@using Microsoft.EntityFrameworkCore
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Models
@using PhotoStudio.app.Data
@using PhotoStudio.app.Services
@inject AppDbContext Db
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Clientes</PageTitle>

<div class="page-container">
    <JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Cliente" Message="Tem certeza que deseja excluir este cliente?" />

    <div class="page-header">
        <h1>Clientes</h1>
        <p class="subtitle">Gerencie seus clientes cadastrados</p>
    </div>

    <!-- Barra de Ações -->
    <div class="actions-bar">
        <div class="search-box">
            <span class="search-icon">🔍</span>
            <input type="text"
                   class="form-control"
                   placeholder="Buscar por nome ou email..."
                   @bind="filtroBusca"
                   @bind:event="oninput" />
        </div>

        <button class="btn btn-primary" @onclick="CriarCliente">
            + Novo Cliente
        </button>
    </div>

    <!-- Tabela -->
    <div class="table-container">
        @if (carregando)
        {
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p>Carregando clientes...</p>
            </div>
        }
        else if (clientesFiltrados.Count == 0)
        {
            <div class="empty-message">
                <div class="empty-icon">👤</div>
                <h3>Nenhum cliente encontrado</h3>
                <p>@(string.IsNullOrWhiteSpace(filtroBusca) ? "Comece criando seu primeiro cliente." : "Tente ajustar os filtros de busca.")</p>
            </div>
        }
        else
        {
            <div class="table-scroll">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Telefone</th>
                            <th>Email</th>
                            <th>Endereço</th>
                            <th style="width: 7%; text-align: center;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in clientesFiltrados)
                        {
                            <tr>
                                <td class="nome-cell" title="@c.Nome">
                                    <span class="nome-texto">@c.Nome</span>
                                </td>
                                <td>@c.Telefone</td>
                                <td class="email-cell" title="@c.Email">@c.Email</td>
                                <td class="endereco-cell" title="@c.Endereco">@c.Endereco</td>
                                <td class="actions-cell">
                                    <button class="icon-btn edit" title="Editar" @onclick="() => Editar(c.Id)">✎</button>
                                    <button class="icon-btn delete" title="Excluir" @onclick="() => Excluir(c.Id)">✕</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="table-footer">
                <span>Total: @clientesFiltrados.Count cliente(s)</span>
            </div>
        }
    </div>
</div>

<style>
    /* ======== MESMO CSS DA PÁGINA DE ENSAIOS ======== */

    .page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    }

    .page-header {
        margin-bottom: 32px;
    }

        .page-header h1 {
            font-size: 2.5rem;
            color: #2d3748;
            margin: 0 0 8px 0;
        }

    .subtitle {
        color: #718096;
        font-size: 1.1rem;
        margin: 0;
    }

    .actions-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .search-box {
        flex: 1;
        min-width: 250px;
        max-width: 500px;
        position: relative;
    }

    .search-icon {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #a0aec0;
        font-size: 1rem;
    }

    .form-control {
        padding: 12px 16px 12px 44px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        width: 100%;
        font-size: 1rem;
        transition: all 0.2s;
    }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

    .btn {
        padding: 12px 32px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

    .table-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .table-scroll {
        overflow-x: auto;
    }

    .styled-table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed;
    }

        .styled-table th {
            text-align: left;
            background: #f7fafc;
            padding: 16px 12px;
            font-weight: 600;
            color: #4a5568;
            border-bottom: 2px solid #e2e8f0;
            font-size: 0.9rem;
            white-space: nowrap;
        }

        .styled-table td {
            padding: 16px 12px;
            border-bottom: 1px solid #edf2f7;
            color: #2d3748;
            vertical-align: middle;
        }

        .styled-table tr:hover {
            background: #f7faff;
        }

    /* Células específicas com truncamento */
    .nome-cell, .email-cell, .endereco-cell {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .nome-texto {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-weight: 500;
    }

    .actions-cell {
        display: flex;
        gap: 8px;
        justify-content: center;
        align-items: center;
    }

    .icon-btn {
        border: none;
        background: none;
        font-size: 1.2rem;
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .icon-btn.edit {
            color: #4a5568;
        }

            .icon-btn.edit:hover {
                background: #ebf8ff;
                color: #3182ce;
            }

        .icon-btn.delete {
            color: #4a5568;
        }

            .icon-btn.delete:hover {
                background: #fff5f5;
                color: #e53e3e;
            }

    .table-footer {
        padding: 16px;
        background: #f7fafc;
        border-top: 1px solid #e2e8f0;
        color: #718096;
        font-size: 0.9rem;
        text-align: right;
    }

    /* Loading e Empty State */
    .loading-container, .empty-message {
        padding: 60px 32px;
        text-align: center;
    }

    .loading-spinner {
        width: 48px;
        height: 48px;
        border: 4px solid #e2e8f0;
        border-top-color: #667eea;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
        margin: 0 auto 20px;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 16px;
        opacity: 0.5;
    }

    .empty-message h3 {
        color: #2d3748;
        font-size: 1.5rem;
        margin: 0 0 8px 0;
    }

    .empty-message p {
        color: #718096;
        font-size: 1rem;
        margin: 0;
    }
</style>

@code {
    private List<ClienteModel> clientes = new();
    private List<ClienteModel> clientesFiltrados = new();
    private bool carregando = true;
    private string filtroBusca = "";
    private JanelaConfirmacao? janelaConfirmacao;

    protected override async Task OnInitializedAsync()
    {
        await CarregarClientes();
        AplicarFiltro();
    }

    private async Task CarregarClientes()
    {
        carregando = true;
        clientes = await Db.Clientes
                           .OrderBy(c => c.Nome)
                           .ToListAsync();

        clientesFiltrados = clientes;
        carregando = false;
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            clientesFiltrados = clientes;
        }
        else
        {
            clientesFiltrados = clientes
                .Where(c =>
                    c.Nome.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                    c.Email.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void CriarCliente()
    {
        Navigation.NavigateTo("/clientes/criarCliente");
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/clientes/editar/{id}");
    }

    private async Task Excluir(int id)
    {
        if (janelaConfirmacao == null)
            return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado)
            return;

        var cliente = await Db.Clientes.FindAsync(id);
        if (cliente != null)
        {
            Db.Clientes.Remove(cliente);
            await Db.SaveChangesAsync();
            await CarregarClientes();
            ToastService.Success("Cliente excluído com sucesso!");
        }
    }
}
