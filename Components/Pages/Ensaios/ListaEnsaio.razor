    }

    .btn-clear-filters {
        background: none;
        border: none;
        color: #ef4444;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
    }

    /* Cards e Tabela */
    .content-card {
        background: white;
        border-radius: 16px;
        box-shadow: var(--card-shadow);
        border: 1px solid var(--border-color);
        overflow: hidden;
    }

    .modern-table {
        width: 100%;
        border-collapse: collapse;
    }

        .modern-table thead th {
            background: #f8fafc;
            padding: 14px 24px;
            text-align: left;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: var(--text-muted);
            font-weight: 700;
            letter-spacing: 0.05em;
            border-bottom: 1px solid var(--border-color);
        }

    .clickable-row {
        cursor: pointer;
        transition: background 0.2s;
        border-bottom: 1px solid #f1f5f9;
    }

        .clickable-row:hover {
            background-color: #f8fafc;
        }

        .clickable-row td {
            padding: 18px 24px;
            vertical-align: middle;
        }

    /* Células Customizadas */
    .main-title {
        display: block;
        font-weight: 700;
        color: var(--text-main);
        margin-bottom: 4px;
        font-size: 0.95rem;
    }

    .sub-info-tags {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .category-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .category-name {
        font-weight: 600;
    }

    .divider {
        opacity: 0.4;
    }

    .date-cell {
        display: flex;
        flex-direction: column;
