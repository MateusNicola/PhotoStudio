@code {
    private List<EnsaioModel> ensaios = new();
    private List<EnsaioModel> ensaiosFiltrados = new();
    private List<CategoriaModel> categorias = new();
    private bool carregando = true;
    private string filtroBusca = "";
    private DateTime? filtroData;
    private int filtroCategoriaId = 0; // Mudado de Enum para ID
    private int paginaAtual = 1;
    private int itensPorPagina = 6;

    private JanelaConfirmacao? janelaConfirmacao;
    private bool TemFiltroAtivo => !string.IsNullOrWhiteSpace(filtroBusca) || filtroData.HasValue || filtroCategoriaId != 0;
    private int totalPaginas => (int)Math.Ceiling((double)ensaiosFiltrados.Count / (itensPorPagina == 0 ? 1 : itensPorPagina));
    private IEnumerable<EnsaioModel> ensaiosPaginados => ensaiosFiltrados.Skip((paginaAtual - 1) * itensPorPagina).Take(itensPorPagina);

    protected override async Task OnInitializedAsync() => await CarregarDados();

    private async Task CarregarDados()
    {
        carregando = true;
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var claimId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (int.TryParse(claimId, out int usuarioId))
            {
                // Carrega categorias do usuário para o filtro
                categorias = await CategoriaService.ListarPorUsuarioAsync(usuarioId);
                // Carrega ensaios (O EnsaioService já deve trazer o Objeto Categoria junto)
                ensaios = await EnsaioService.ListarTodosAsync();
            }
            AplicarFiltro();
        }
        finally { carregando = false; }
    }

    private void MudarPagina(int novaPagina)
    {
        if (novaPagina >= 1 && novaPagina <= totalPaginas)
        {
            paginaAtual = novaPagina;
        }
    }

    private void AplicarFiltro()
    {
        paginaAtual = 1;
        ensaiosFiltrados = ensaios
            .Where(e => (string.IsNullOrEmpty(filtroBusca) ||
                         e.Titulo.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                         (e.Cliente != null && e.Cliente.Nome.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase)))
                     && (!filtroData.HasValue || e.Data.Date == filtroData.Value.Date)
                     && (filtroCategoriaId == 0 || e.CategoriaId == filtroCategoriaId))
            .OrderByDescending(e => e.Data).ToList();
    }

    private void LimparFiltros() { filtroBusca = ""; filtroData = null; filtroCategoriaId = 0; AplicarFiltro(); }
    private void Editar(int id) => Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");
    private void IrParaCriarEnsaio() => Navigation.NavigateTo("/ensaios/criarEnsaio");

    private string ObterCorSituacao(Situacao s) => s switch
    {
        Situacao.Concluido => "#10b981",
        Situacao.Cancelado => "#ef4444",
        Situacao.Agendado => "#f59e0b",
        _ => "#64748b"
    };
}