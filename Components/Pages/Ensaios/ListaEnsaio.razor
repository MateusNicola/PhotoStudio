@code {
    private List<EnsaioModel> ensaios = new();
    private List<EnsaioModel> ensaiosFiltrados = new();
    private bool carregando = true;
    private string filtroBusca = "";
    private JanelaConfirmacao? janelaConfirmacao;

    protected override async Task OnInitializedAsync()
    {
        await CarregarEnsaios();
        AplicarFiltro();
    }

    private void OnFiltroChanged(ChangeEventArgs e)
    {
        filtroBusca = e.Value?.ToString() ?? string.Empty;
        AplicarFiltro();
    }

    private async Task CarregarEnsaios()
    {
        carregando = true;
        StateHasChanged();

        try
        {
            ensaios = await Db.Ensaios
                .Include(e => e.Cliente)
                .OrderByDescending(e => e.Data)
                .ToListAsync();

            ensaiosFiltrados = ensaios.ToList();
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao carregar ensaios: {ex.Message}");
        }
        finally
        {
            carregando = false;
            StateHasChanged();
        }
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroBusca))
        {
            ensaiosFiltrados = ensaios.ToList();
            return;
        }

        ensaiosFiltrados = ensaios
            .Where(e =>
                e.Titulo.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                e.Tipo.ToString().Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ||
                (e.Cliente?.Nome?.Contains(filtroBusca, StringComparison.OrdinalIgnoreCase) ?? false)
            )
            .ToList();
    }

    private void Editar(int id)
    {
        Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");
    }

    private async Task Excluir(int id)
    {
        if (janelaConfirmacao == null)
            return;

        bool confirmado = await janelaConfirmacao.Show();
        if (!confirmado)
            return;

        try
        {
            var ensaio = await Db.Ensaios.FindAsync(id);
            if (ensaio != null)
            {
                Db.Ensaios.Remove(ensaio);
                await Db.SaveChangesAsync();
                await CarregarEnsaios();
                AplicarFiltro();
                ToastService.Success("Ensaio excluído com sucesso!");
            }
        }
        catch (Exception ex)
        {
            ToastService.Error($"Erro ao excluir ensaio: {ex.Message}");
        }
    }

    private void IrParaCriarEnsaio()
    {
        Navigation.NavigateTo("/ensaios/criarEnsaio");
    }

    private string ObterCorTipo(TipoEnsaio tipo)
    {
        return tipo switch
        {
            TipoEnsaio.Casamento => "#f093fb",
            TipoEnsaio.Gestante => "#fa709a",
            TipoEnsaio.Infantil => "#4facfe",
            TipoEnsaio.Evento => "#43e97b",
            TipoEnsaio.Retrato => "#667eea",
            _ => "#a0aec0"
        };
    }

    private string ObterCorSituacao(Situacao situacao)
    {
        return situacao switch
        {
            Situacao.Cancelado => "#e53e3e",
            Situacao.Concluido => "#38a169",
            Situacao.Agendado => "#3182ce",
            Situacao.Confirmado => "#d69e2e",
            _ => "#a0aec0"
        };
    }
}