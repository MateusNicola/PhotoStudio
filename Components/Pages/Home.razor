        padding: 8px 12px;
        min-width: 60px;
    }

    .month {
        font-size: 0.7rem;
        font-weight: 700;
        color: var(--text-secondary);
    }

    .day {
        font-size: 1.4rem;
        font-weight: 800;
        color: var(--text-primary);
        line-height: 1;
    }

    .ensaio-details {
        min-width: 0; /* Impede que o texto quebre o grid */
    }

    .ensaio-title {
        margin: 0 0 6px 0;
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .ensaio-meta {
        display: flex;
        gap: 8px;
        font-size: 0.8rem;
    }

    .meta-item {
        display: inline-flex;
        align-items: center;
    }

    .tag {
        padding: 2px 8px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.7rem;
    }

    .ensaio-status {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 4px;
    }

    .status-badge {
        padding: 4px 10px;
        border-radius: 20px;
        color: white;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .countdown {
        font-size: 0.75rem;
        color: var(--text-secondary);
        font-weight: 500;
    }

        .countdown.urgente {
            color: #ef4444;
            font-weight: 700;
        }

    /* Empty State */
    .empty-state {
        grid-column: 1 / -1;
        background: white;
        border-radius: var(--radius);
        padding: 3rem;
        text-align: center;
        border: 2px dashed #e2e8f0;
    }

    .empty-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: block;
    }

    .empty-state p {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }

    /* Responsivo */
    @@media (max-width: 768px) {
        .dashboard-container

    {
        padding: 1rem;
    }

    .dashboard-title {
        font-size: 1.5rem;
    }

    .ensaio-card-body {
        grid-template-columns: auto 1fr;
    }

    .ensaio-status {
        grid-column: 1 / -1;
        flex-direction: row;
        justify-content: space-between;
        margin-top: 10px;
        align-items: center;
    }

    .header-actions {
        width: 100%;
    }

    .btn-modern {
        flex: 1;
        justify-content: center;
    }

    }

    .ensaios-grid {
        display: grid;
        /* Aumentado o minmax de 320px para 400px para cards mais robustos */
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        gap: 1.5rem;
    }

    .ensaio-card-body {
        padding: 1.5rem; /* Aumentado o respiro interno */
        flex: 1;
        display: grid;
        grid-template-columns: auto 1fr auto;
        gap: 1.5rem; /* Mais espaço entre os elementos */
        align-items: center;
    }

    .ensaio-date-box {
        padding: 10px 15px; /* Box de data maior */
        min-width: 75px;
        background: #f8fafc;
        border: 1px solid #e2e8f0;
    }

    .day {
        font-size: 1.8rem; /* Número do dia maior */
        font-weight: 800;
        color: var(--text-primary);
    }

    .ensaio-title {
        font-size: 1.15rem; /* Título mais legível */
        margin-bottom: 8px;
    }

    .ensaio-meta {
        font-size: 0.9rem; /* Informações de hora e categoria maiores */
        gap: 12px;
    }

    .category-badge {
        font-weight: 600;
        font-size: 0.85rem;
    }

    .status-badge {
        padding: 6px 14px; /* Badge de status mais visível */
        font-size: 0.75rem;
    }

    .countdown {
        font-size: 0.85rem; /* Texto de "Em X dias" maior */
    }

    @@media (max-width: 768px) {
        .ensaios-grid

    {
        grid-template-columns: 1fr; /* Em mobile, ocupa a largura toda */
    }

    }
</style>

@code {
    private DateTime dataAtual = DateTime.Now;
    private DateTime? diaSelecionado;

    // Lista principal
    private List<EnsaioModel> ensaios = new();
    private List<ClienteModel> clientes = new();

    // Stats
    private int ensaiosMes;
    private int clientesNovosMes;
    private decimal faturamentoMes;
    private int ensaiosConcluidosMes;

    private string userName = "Usuário";

    protected override async Task OnInitializedAsync()
    {
        await ObterNomeUsuario();
        await CarregarDashboard();
    }

    private async Task CarregarDashboard()
    {
        // Certifique-se que seu Service retorna esses dados corretamente
        var dados = await DashboardService.GetDashboardDataAsync();

        ensaios = dados.Ensaios;
        clientes = dados.Clientes;
        ensaiosMes = dados.EnsaiosMes;
        clientesNovosMes = dados.ClientesNovosMes;
        faturamentoMes = dados.FaturamentoMes;
        ensaiosConcluidosMes = dados.EnsaiosConcluidosMes;
    }

    // Métodos de Navegação
    private void CriarNovoEnsaio() => Navigation.NavigateTo("/ensaios/criarEnsaio");
    private void EditarEnsaio(int id) => Navigation.NavigateTo($"/ensaios/editarEnsaio/{id}");
    private void CriarCliente() => Navigation.NavigateTo("/clientes/criarCliente");

    // Helpers de Estilo
    private string ObterCorCategoria(EnsaioModel ensaio)
    {
        return ensaio.Categoria?.Cor ?? "#94a3b8"; // Slate-400 default
    }

    private string ObterCorSituacao(Situacao situacao) => situacao switch
    {
        Situacao.Cancelado => "#ef4444", // Red
        Situacao.Concluido => "#10b981", // Emerald
        Situacao.Agendado => "#3b82f6",  // Blue
        Situacao.Confirmado => "#f59e0b", // Amber
        _ => "#94a3b8"
    };

    private async Task ObterNomeUsuario()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity is { IsAuthenticated: true })
        {
            var claimNome = user.FindFirst("Nome")?.Value;
            userName = claimNome ?? user.Identity.Name ?? "Fotógrafo";

            if (userName.Contains(" "))
            {
                userName = userName.Split(' ')[0];
            }
        }
    }
}