@page "/ensaios/editarEnsaio/{EnsaioId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using PhotoStudio.app.Components.Shared
@using PhotoStudio.app.Data
@using PhotoStudio.app.Models
@using PhotoStudio.app.Services
@using PhotoStudio.app.Services.Clientes
@using PhotoStudio.app.Services.Ensaios
@inject EnsaioService EnsaioService
@inject ClienteService ClienteService
@inject NavigationManager Navigation
@inject ToastService ToastService
@attribute [Authorize]

<PageTitle>Ensaio - Estúdio de Fotografia</PageTitle>
<JanelaConfirmacao @ref="janelaConfirmacao" Title="Excluir Ensaio" Message="Tem certeza que deseja excluir este ensaio? Esta ação não pode ser desfeita." />

<div class="page-container">
    <div class="page-header">
        <div class="header-content">
            <button class="btn-back" @onclick="Voltar" title="Voltar">
                <span>←</span>
            </button>
            <div class="header-text">
                <h1>Ensaio</h1>
            </div>
            @if (!carregando && ensaio != null)
            {
                <div class="actions-right">                    
                    <button type="submit" class="btn btn-primary" @onclick="() => SalvarEnsaio()" disabled="@(salvando || excluindo)">
                        @if (salvando)
                        {
                            <span class="spinner"></span>
                            <span>Salvando...</span>
                        }
                        else
                        {
                            <span>💾 Salvar</span>
                        }
                    </button>
                    <button class="btn-delete-header" @onclick="() => ExcluirEnsaio()" title="Excluir ensaio">
                        <span>🗑️</span>
                        <span>Excluir</span>
                    </button>
                </div>
            }
        </div>
    </div>

    @if (carregando)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
            <p>Carregando dados do ensaio...</p>
        </div>
    }
    else if (ensaio == null)
    {
        <div class="error-container">
            <div class="error-icon">⚠️</div>
            <h3>Ensaio não encontrado</h3>
            <p>O ensaio que você está tentando editar não existe.</p>
            <button class="btn btn-primary" @onclick="Voltar">
                Voltar para Ensaios
            </button>
        </div>
    }
    else
    {
        <div class="form-container">
            <EditForm Model="@ensaio" OnValidSubmit="SalvarEnsaio">
                <DataAnnotationsValidator />

                <div class="form-grid">
                    <!-- Título -->
                    <div class="form-group full-width">
                        <label for="titulo">Título do Ensaio *</label>
                        <InputText id="titulo" @bind-Value="ensaio.Titulo"
                                   class="form-control" placeholder="Ex: Ensaio de Casamento - João e Maria" />
                        <ValidationMessage For="@(() => ensaio.Titulo)" />
                    </div>

                    <!-- Tipo de Ensaio -->
                    <div class="form-group">
                        <label for="tipo">Tipo de Ensaio *</label>
                        <InputSelect id="tipo" @bind-Value="ensaio.Tipo" class="form-control">
                            @foreach (var tipo in Enum.GetValues<TipoEnsaio>())
                            {
                                <option value="@tipo">@tipo</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => ensaio.Tipo)" />
                    </div>

                    <!-- Cliente -->
                    <div class="form-group">
                        <div class="label-with-button">
                            <label for="cliente">Cliente *</label>
                        </div>
                        <select id="cliente" @bind="ensaio.ClienteId" class="form-control">
                            <option value="0">Selecione o cliente</option>
                            @foreach (var cliente in clientes)
                            {
                                <option value="@cliente.Id">@cliente.Nome</option>
                            }
                        </select>
                        @if (ensaio.ClienteId == 0)
                        {
                            <small class="validation-message">O campo Cliente é obrigatório.</small>
                        }
                    </div>

                    <!-- Data -->
                    <div class="form-group">
                        <label for="data">Data *</label>
                        <InputDate id="data" @bind-Value="dataEnsaio" class="form-control" />
                        <ValidationMessage For="@(() => dataEnsaio)" />
                    </div>

                    <!-- Hora -->
                    <div class="form-group">
                        <label for="hora">Horário *</label>
                        <InputText id="hora" type="time" @bind-Value="horaEnsaio" class="form-control" />
                        @if (string.IsNullOrEmpty(horaEnsaio))
                        {
                            <small class="validation-message">O campo Horário é obrigatório.</small>
                        }
                    </div>

                    <!-- Local -->
                    <div class="form-group full-width">
                        <label for="local">Local *</label>
                        <InputText id="local" @bind-Value="ensaio.Local"
                                   class="form-control" placeholder="Ex: Praça da Matriz, Porto Alegre" />
                        <ValidationMessage For="@(() => ensaio.Local)" />
                    </div>

                    <!-- Valor -->
                    <div class="form-group">
                        <label for="valor">Valor (R$)</label>
                        <InputNumber id="valor" @bind-Value="ensaio.Valor"
                                     class="form-control" placeholder="0,00" />
                        <ValidationMessage For="@(() => ensaio.Valor)" />
                    </div>

                    <!-- Situação -->
                    <div class="form-group">
                        <label for="situacao">Situação *</label>
                        <InputSelect id="situacao" @bind-Value="ensaio.Situacao" class="form-control">
                            @foreach (var situacao in Enum.GetValues<Situacao>())
                            {
                                <option value="@situacao">@situacao</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => ensaio.Situacao)" />
                    </div>
                </div>
            </EditForm>
        </div>
    }
</div>

